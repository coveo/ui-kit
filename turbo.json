{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "cdn/**",
        "docs/**",
        ".stencil/**",
        "temp/**",
        "coverage/**",
        ".next/**",
        "!.next/cache/**",
        "**/*.tsbuildinfo"
      ]
    },
    "build:definitions": {
      "outputs": ["dist/definitions/**"]
    },
    "build:bundles": {
      "outputs": ["dist/**"]
    },
    "build:typedoc": {
      "outputs": ["docs/**", "temp/**"]
    },
    "build:typedoc:search": {
      "outputs": ["temp/index.json"]
    },
    "build:typedoc:commerce": {
      "outputs": ["temp/commerce.json"]
    },
    "build:typedoc:case-assist": {
      "outputs": ["temp/case-assist.json"]
    },
    "build:typedoc:insight": {
      "outputs": ["temp/insight.json"]
    },
    "build:typedoc:recommendation": {
      "outputs": ["temp/recommendation.json"]
    },
    "build:typedoc:ssr": {
      "outputs": ["temp/ssr.json"]
    },
    "build:typedoc:ssr-commerce": {
      "outputs": ["temp/ssr-commerce.json"]
    },
    "build:typedoc:merge": {
      "outputs": ["docs/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "dev:definitions": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "dev:bundles": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "prod": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "e2e": {
      "dependsOn": ["build"],
      "outputs": [
        "playwright-report/**",
        "cypress/screenshots/**",
        "cypress/videos/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "lint:check": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "publish:bump": {
      "dependsOn": [],
      "cache": false
    },
    "promote:npm:latest": {
      "dependsOn": [],
      "env": [
        "NODE_AUTH_TOKEN",
        "NPM_CONFIG_USERCONFIG",
        "ACTIONS_ID_TOKEN_REQUEST_URL",
        "ACTIONS_ID_TOKEN_REQUEST_TOKEN"
      ],
      "cache": false
    },
    "release:phase1": {
      "dependsOn": ["^release:phase1"],
      "cache": false
    },
    "release:phase3": {
      "dependsOn": ["^release:phase3"],
      "env": [
        "NODE_AUTH_TOKEN",
        "NPM_CONFIG_USERCONFIG",
        "ACTIONS_ID_TOKEN_REQUEST_URL",
        "ACTIONS_ID_TOKEN_REQUEST_TOKEN"
      ],
      "cache": false
    }
  },
  "globalDependencies": [
    "package.json",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml",
    ".npmrc",
    "tsconfig.json",
    "biome.jsonc",
    ".cspell.json"
  ],
  "globalEnv": [
    "DEPLOYMENT_ENVIRONMENT",
    "IS_PRERELEASE",
    "PR_NUMBER",
    "NODE_ENV",
    "CI"
  ],
  "globalPassThroughEnv": [
    "GITHUB_*",
    "RUNNER_*",
    "SFDX_*",
    "PLAYWRIGHT_BROWSERS_PATH"
  ]
}
