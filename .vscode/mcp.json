{
  "servers": {
    "atlassian": {
      "type": "http",
      "url": "https://mcp.atlassian.com/v1/sse"
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["@playwright/mcp"]
    },
    "storybook": {
      "type": "http",
      "url": "http://localhost:4400/mcp"
    },
    "ui-kit-knowledge-graph": {
      "type": "stdio",
      "command": "node",
      "args": ["packages/knowledge-graph/dist/bin/mcp-server.js"],
      "env": {
        "MEMGRAPH_URI": "bolt://localhost:7687"
      }
    }
  }
}
