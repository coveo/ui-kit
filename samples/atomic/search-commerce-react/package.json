{
  "name": "@samples/atomic-search-commerce-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:assets": "node ../../../utils/ci/copy-files.mjs ../../../packages/atomic-react/dist/assets public/assets ../../../packages/atomic-react/dist/lang public/lang ../../../packages/atomic/dist/atomic/themes public/themes",
    "dev": "pnpm run build:assets && pnpm run dev:vite",
    "dev:vite": "vite",
    "build": "pnpm run build:ts && pnpm run build:vite",
    "build:ts": "pnpm --filter @coveo/ci if-not-cdn -- \"tsc -b\"",
    "build:vite": "pnpm --filter @coveo/ci if-not-cdn -- \"vite build\""
  },
  "dependencies": {
    "@coveo/atomic-react": "3.3.13",
    "@coveo/headless": "3.31.2",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@playwright/test": "1.54.1",
    "@types/node": "22.16.5",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "5.0.3",
    "typescript": "5.8.3",
    "vite": "7.0.6"
  }
}
