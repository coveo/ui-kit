{
  "name": "@samples/atomic-search-nextjs-pages-router",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@coveo/atomic": "3.34.0",
    "@coveo/atomic-react": "3.3.13",
    "@coveo/headless": "3.31.2",
    "next": "15.2.4",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@types/node": "22.16.5",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.2",
    "cypress": "13.7.3",
    "typescript": "5.8.3"
  },
  "scripts": {
    "build": "pnpm run build:next && pnpm run build:ts-esm && pnpm run build:ts-cjs",
    "build:next": "pnpm --filter @coveo/ci if-not-cdn -- \"npx next build\"",
    "build:ts-esm": "pnpm --filter @coveo/ci if-not-cdn -- \"tsc --noEmit\"",
    "build:ts-cjs": "pnpm --filter @coveo/ci if-not-cdn -- \"tsc --module commonjs --noEmit\"",
    "dev": "pnpm run build:assets && pnpm run dev:nextjs",
    "dev:nextjs": "next dev",
    "build:assets": "node ../../../utils/ci/copy-files.mjs ../../../packages/atomic-react/dist/assets public/assets ../../../packages/atomic-react/dist/lang public/lang",
    "e2e:watch": "cypress open --browser chrome --e2e",
    "e2e": "cypress run --browser chrome"
  }
}
