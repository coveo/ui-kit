{
  "name": "@samples/headless-ssr-commerce-express",
  "description": "Headless Commerce SSR Generic Sample using the new simplified ssr-next API",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run build:client -- --watch=forever & npx tsx watch ./src/server.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "esbuild ./src/client.ts --bundle --outfile=dist/client.js --format=esm --target=es2022",
    "start": "npm run build && npx tsx ./src/server.ts",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@coveo/headless": "3.32.0",
    "express": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "esbuild": "^0.25.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "type": "module"
}
