{
  "name": "@samples/headless-ssr-search-express",
  "description": "Complete SSR search implementation with Coveo Headless (next major version) and Express.js - framework-agnostic sample",
  "version": "0.0.0",
  "private": true,
  "keywords": [
    "coveo",
    "headless",
    "ssr",
    "server-side-rendering",
    "express",
    "search",
    "typescript",
    "framework-agnostic"
  ],
  "scripts": {
    "dev": "npm run build:client -- --watch=forever & npx tsx watch ./src/server.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "esbuild ./src/client.ts --bundle --outfile=dist/client.js --format=esm --target=es2022",
    "start": "npm run build && npx tsx ./src/server.ts",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@coveo/headless": "workspace:*",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "type": "module"
}
