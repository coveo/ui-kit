node('linux && docker') {
  checkout scm

  withDockerContainer(image: 'node:14', args: '-u=root') {
    stage('Setup') {
      sh 'npm run setup'
    }

    /**
     * The build versions must be bumped before building ui-kit in order
     * to expose the correct versions in headless and atomic.
     */
    stage('Graduate') {
      withCredentials([
      usernameColonPassword(credentialsId: 'github-commit-token', variable: 'GH_CREDENTIALS')]) {
        sh 'npm run bump:version:graduate'
      }
    }

    stage('Build') {
      sh 'npm run build'
    }

    stage('Npm publish') {
      withCredentials([
      string(credentialsId: 'NPM_TOKEN', variable: 'NPM_TOKEN')]) {
        sh "echo //registry.npmjs.org/:_authToken=${NPM_TOKEN} > ~/.npmrc"
        sh 'npm run npm:publish:beta || true'
      }
    }
  }
}
