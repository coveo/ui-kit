node('linux && docker') {
  checkout scm

  withDockerContainer(image: 'node:14', args: '-u=root') {
    stage('Setup') {
      sh 'npm run setup'
    }

    stage('Build') {
      sh 'npm run build'
      sh 'npm run doc'
    }

    stage('Graduate') {
      withCredentials([
      usernameColonPassword(credentialsId: 'github-commit-token', variable: 'GH_CREDENTIALS')]) {
        sh 'npm run bump:version:graduate'
      }
    }

    stage('Npm publish') {
      withCredentials([
      string(credentialsId: 'NPM_TOKEN', variable: 'NPM_TOKEN')]) {
        sh "echo //registry.npmjs.org/:_authToken=${NPM_TOKEN} > ~/.npmrc"
        sh 'npm run npm:publish:beta || true'
      }
    }

    stage('Notify Docs') {
      withCredentials([
        usernamePassword(credentialsId: 'github-commit-token', usernameVariable: 'GITHUB_USERNAME', passwordVariable: 'GITHUB_TOKEN')
      ]) {
        sh 'npm run notify:docs'
      }
    }
  }
}
