{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "share": "manual",
  "instructions": [
    ".github/instructions/general.instructions.md",
    ".github/instructions/general.typescript.instructions.md"
  ],
  "formatter": {
    "biome": {
      "command": ["pnpm", "exec", "biome", "check", "--write", "$FILE"],
      "extensions": [".js", ".ts", ".jsx", ".tsx", ".json", ".jsonc"]
    }
  },
  "mcp": {
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp"],
      "enabled": true
    }
  },
  "compaction": {
    "auto": true,
    "prune": true
  }
}
