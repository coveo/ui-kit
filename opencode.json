{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "share": "manual",
  "instructions": [
    ".github/instructions/general.instructions.md",
    ".github/instructions/general.typescript.instructions.md"
  ],
  "formatter": {
    "biome": {
      "command": ["pnpm", "exec", "biome", "check", "--write", "$FILE"],
      "extensions": [".js", ".ts", ".jsx", ".tsx", ".json", ".jsonc"]
    }
  },
  "mcp": {
    "uikit-graph": {
      "type": "local",
      "command": ["node", "alpha-ingest/mcp/dist/index.js"],
      "environment": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USER": "neo4j",
        "NEO4J_PASSWORD": "neo7rcx7tay!qnd2AZE"
      },
      "enabled": true
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp"],
      "enabled": true
    }
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "agent": {
    "plan": {
      "model": "github-copilot/claude-haiku-4.5"
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "Planner-Sisyphus": {
      "model": "github-copilot/gemini-3-flash-preview"
    },
    "Sisyphus": {
      "model": "github-copilot/gpt-5.2"
    },
    "oracle": {
      "model": "github-copilot/gpt-5.2"
    },
    "explore": {
      "model": "github-copilot/gpt-5-mini"
    },
    "librarian": {
      "model": "github-copilot/gemini-3-flash-preview"
    },
    "document-writer": {
      "model": "github-copilot/gemini-3-flash-preview"
    },
    "frontend-ui-ux-engineer": {
      "model": "github-copilot/gemini-3-flash-preview"
    },
    "multimodal-looker": {
      "model": "github-copilot/gemini-3-flash-preview"
    }
  },
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/claude-haiku-4.5"
}
