{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "share": "manual",
  "instructions": [
    ".github/instructions/general.instructions.md",
    ".github/instructions/general.typescript.instructions.md",
    ".github/instructions/a11y.instructions.md",
    ".github/instructions/atomic.instructions.md",
    ".github/instructions/tests-atomic.instructions.md",
    ".github/instructions/playwright-typescript.instructions.md",
    ".github/instructions/msw-api-mocking.instructions.md",
    ".github/instructions/tests-atomic-stencil-functional-component.instructions.md"
  ],
  "formatter": {
    "biome": {
      "command": ["npx", "@biomejs/biome", "check", "--write", "$FILE"],
      "extensions": [".js", ".ts", ".jsx", ".tsx", ".json", ".jsonc"]
    }
  },
  "mcp": {
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://api.githubcopilot.com/mcp/",
        "--static-oauth-client-info",
        "@~/.mcp-auth/github-client-info.json"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp"],
      "enabled": true
    },
    "storybook": {
      "type": "remote",
      "url": "http://localhost:4400/mcp"
    }
  },
  "permission": {
    "bash": "allow",
    "edit": "allow",
    "write": "allow",
    "patch": "allow",
    "webfetch": "allow",
    "lsp": "allow",
    "mcp": "allow",
    "skill": "allow"
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "plugin": ["@mohak34/opencode-notifier@latest"]
}
