{
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"]
    },
    "prod": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "e2e": {
      "dependsOn": ["build"]
    },
    "lint:check": {},
    "lint:fix": {},
    "publish:sfdx": {
      "dependsOn": ["build"]
    },
    "promote:sfdx": {
      "dependsOn": ["build"]
    },
    "release:phase1": {
      "dependsOn": ["^release:phase1"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npm run publish:bump",
          "npm run build",
          "npm run publish:npm"
        ],
        "parallel": false,
        "cwd": "{projectRoot}"
      }
    },
    "release:phase4": {
      "dependsOn": ["^release:phase4"],
      "//": "Currently disabled TODO KIT-3074",
      "executor": "nx:noop",
      "options": {"script": "publish:bump"}
    }
  },
  "defaultBase": "master",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "useInferencePlugins": false,
  "useLegacyCache": true
}
