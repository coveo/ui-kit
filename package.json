{
  "name": "ui-kit",
  "private": true,
  "scripts": {
    "postinstall": "husky install & patch-package",
    "start": "lerna run --parallel start",
    "dev": "npm run start -- --scope @coveo/headless --scope @coveo/atomic",
    "build": "lerna run clean && lerna run build",
    "test": "lerna run --parallel test",
    "test:watch": "lerna run --parallel test:watch --no-prefix",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "pr:report": "node ./scripts/reports/pr-report.js",
    "report:bundle-size:time-series": "node ./scripts/reports/bundle-size/time-series.js",
    "cypress:test": "lerna run cypress:test",
    "commit": "git-cz",
    "setup:snyk": "node ./scripts/snyk/remove-samples-workspace.js",
    "bump:version": "node ./scripts/deploy/bump-version.js",
    "npm:publish:alpha": "lerna run --stream npm:publish:alpha",
    "npm:tag": "node ./scripts/deploy/update-npm-tag.js",
    "npm:tag:beta": "npm run npm:tag -- beta",
    "npm:tag:latest": "npm run npm:tag -- latest",
    "notify:docs": "node ./scripts/notify-docs/published-ui-kit.js",
    "doc:generate": "lerna run doc:generate"
  },
  "dependencies": {
    "patch-package": "6.4.7"
  },
  "devDependencies": {
    "@actions/core": "1.8.2",
    "@actions/github": "5.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@commitlint/config-lerna-scopes": "17.0.0",
    "@commitlint/lint": "17.0.3",
    "@octokit/rest": "19.0.4",
    "@rollup/plugin-typescript": "8.3.2",
    "@types/jest": "28.1.7",
    "@types/node": "18.7.9",
    "@typescript-eslint/eslint-plugin": "5.30.0",
    "@typescript-eslint/parser": "5.30.0",
    "aws-sdk": "2.1135.0",
    "commitizen": "4.2.4",
    "concurrently": "7.3.0",
    "cross-fetch": "3.1.5",
    "cz-conventional-changelog": "3.2.0",
    "esbuild": "0.14.2",
    "esbuild-plugin-alias": "0.2.1",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "gts": "3.1.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "lerna": "5.4.3",
    "lint-staged": "13.0.3",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "semver": "7.3.7",
    "ts-jest": "28.0.8",
    "typescript": "4.6.4"
  },
  "workspaces": [
    "packages/bueno",
    "packages/auth",
    "packages/headless",
    "packages/atomic",
    "packages/quantic",
    "packages/atomic-react",
    "packages/atomic-angular/projects/*",
    "packages/samples/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": [
        "auth",
        "bueno",
        "headless",
        "atomic",
        "quantic"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "eslint --fix"
    ],
    "**/*.{scss,css,pcss,html,mdx}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  }
}
