{
  "name": "ui-kit",
  "private": true,
  "scripts": {
    "postinstall": "husky install && patch-package && npm run link:angular -w @coveo/atomic-angular-samples && nx run-many --target=install:isolated",
    "dev:atomic": "concurrently \"nx run headless:dev\" \"nx run atomic:dev\"",
    "build": "nx run-many --target=build",
    "test": "nx run-many --target=test",
    "e2e": "nx run-many --target=e2e",
    "lint:check": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "publish:npm:release": "nx run-many --target=publish:npm:release",
    "publish:npm:prerelease": "nx run-many --target=publish:npm:prerelease",
    "pr:report": "node ./scripts/reports/pr-report.mjs",
    "report:bundle-size:time-series": "node ./scripts/reports/bundle-size/time-series.mjs",
    "commit": "git-cz",
    "setup:snyk": "node ./scripts/snyk/remove-samples-workspace.mjs",
    "bump:version": "node ./scripts/deploy/bump-version.mjs",
    "bump:version:major-prerelease": "node ./scripts/deploy/manual-major-prerelease.mjs",
    "promote:npm:beta": "nx run-many --target=promote:npm:beta",
    "promote:npm:latest": "nx run-many --target=promote:npm:latest",
    "notify:docs": "node ./scripts/notify-docs/published-ui-kit.mjs"
  },
  "dependencies": {
    "patch-package": "6.4.7"
  },
  "devDependencies": {
    "@actions/core": "1.9.1",
    "@actions/github": "5.1.1",
    "@commitlint/config-conventional": "17.0.3",
    "@commitlint/config-lerna-scopes": "17.0.2",
    "@commitlint/lint": "9.1.2",
    "@coveo/semantic-monorepo-tools": "1.5.5",
    "@octokit/rest": "19.0.5",
    "@rollup/plugin-typescript": "8.3.4",
    "@trivago/prettier-plugin-sort-imports": "4.0.0",
    "@types/jest": "27.5.2",
    "@types/node": "14.18.25",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "aws-sdk": "2.1199.0",
    "commitizen": "4.2.5",
    "concurrently": "7.6.0",
    "cross-fetch": "3.1.5",
    "cz-conventional-changelog": "3.3.0",
    "detect-indent": "7.0.1",
    "esbuild": "0.14.2",
    "esbuild-plugin-alias": "0.2.1",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "exponential-backoff": "^3.1.0",
    "gts": "3.1.0",
    "husky": "5.2.0",
    "jest": "27.5.1",
    "lerna": "5.6.2",
    "lint-staged": "13.1.0",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "semver": "7.3.7",
    "ts-jest": "27.1.5",
    "typescript": "4.6.4",
    "nx": "15.7.0",
    "execa": "^7.0.0",
    "@types/execa": "^2.0.0"
  },
  "workspaces": [
    "packages/bueno",
    "packages/auth",
    "packages/headless",
    "packages/atomic",
    "packages/quantic",
    "packages/atomic-hosted-page",
    "packages/atomic-react",
    "packages/atomic-angular",
    "packages/atomic-angular/projects/*",
    "packages/samples/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": [
        "auth",
        "bueno",
        "headless",
        "atomic",
        "quantic"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "eslint --fix"
    ],
    "**/{*.{scss,css,pcss,html,mdx},{package,nx,project}.json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.6.0"
  }
}
