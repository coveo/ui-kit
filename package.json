{
  "name": "ui-kit",
  "private": true,
  "version": "3.0.81",
  "scripts": {
    "postinstall": "husky install",
    "reset:install": "git checkout origin/main pnpm-lock.yaml && pnpm install",
    "clean:install": "git clean -xfd && pnpm run reset:install",
    "dev:atomic": "concurrently \"pnpm --filter @coveo/headless dev\" \"pnpm --filter @coveo/atomic start\"",
    "build": "turbo build",
    "test": "turbo test",
    "e2e": "turbo e2e",
    "lint:check": "npx @biomejs/biome check --error-on-warnings . && turbo lint:check --filter=@coveo/quantic && cspell **/*.md --no-progress --show-suggestions --show-context",
    "lint:fix": "npx @biomejs/biome check --write --error-on-warnings . && turbo lint:fix --filter=@coveo/quantic && cspell **/*.md --no-progress --show-suggestions --show-context",
    "package-compatibility": "node ./scripts/ci/package-compatibility.mjs",
    "pr:report": "echo 'TODO KIT-5109: pr:report must be reactivated after pnpm has been merged in main'",
    "report:bundle-size:time-series": "node ./scripts/reports/bundle-size/time-series.mjs",
    "pre-commit": "lint-staged",
    "promote:npm:latest": "turbo promote:npm:latest",
    "notify:docs": "node ./scripts/notify-docs/published-ui-kit.mjs",
    "release": "pnpm run nx:graph && pnpm run release:phase0 && pnpm run release:phase1 && pnpm run release:phase2 && pnpm run release:phase3 && pnpm run release:phase4",
    "nx:graph": "turbo release:phase1 --dry-run=json > topology-raw.json && node scripts/transform-topology.mjs topology-raw.json topology.json",
    "release:phase0": "pnpm --filter @coveo/ci git-lock",
    "release:phase1": "turbo release:phase1 --concurrency=1 && pnpm run build",
    "release:phase2": "pnpm --filter @coveo/ci bump:root",
    "release:phase3": "turbo release:phase3 --concurrency=1",
    "release:phase4": "pnpm --filter @coveo/ci git-publish-all",
    "knip": "knip"
  },
  "devDependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.1",
    "@biomejs/biome": "2.1.4",
    "@coveo/ci": "workspace:*",
    "@cspell/dict-fr-fr": "2.3.2",
    "@tsconfig/node20": "20.1.6",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "concurrently": "9.2.0",
    "cspell": "9.2.0",
    "esbuild": "catalog:",
    "esbuild-plugin-alias": "0.2.1",
    "esbuild-plugin-umd-wrapper": "3.0.0",
    "husky": "9.1.7",
    "knip": "5.62.0",
    "lint-staged": "16.1.2",
    "@playwright/mcp": "catalog:",
    "playwright": "catalog:",
    "publint": "0.3.12",
    "semver": "7.7.2",
    "turbo": "2.5.5",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "overrides": {
    "@coveo/ci": {
      "@types/async-retry": {
        "@types/retry": "0.12.5"
      }
    }
  },
  "pnpm": {
    "patchedDependencies": {
      "@stencil/angular-output-target@0.8.4": "patches/@stencil+angular-output-target+0.8.4.patch",
      "@stencil/core@4.20.0": "patches/@stencil+core+4.20.0.patch",
      "@wc-toolkit/storybook-helpers@10.0.0": "patches/@wc-toolkit+storybook-helpers+10.0.0.patch",
      "fix-esm-import-path@1.10.1": "patches/fix-esm-import-path+1.10.1.patch",
      "jest-environment-jsdom@29.7.0": "patches/jest-environment-jsdom+29.7.0.patch",
      "@stencil/react-output-target@0.5.3": "patches/@stencil__react-output-target@0.5.3.patch"
    },
    "overrides": {
      "braces": "3.0.3",
      "react": "catalog:",
      "react-dom": "catalog:",
      "typescript": "catalog:",
      "html-minifier": "npm:html-minifier-terser@^7.2.0"
    }
  },
  "engines": {
    "node": "^22.14.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.24.0"
}
