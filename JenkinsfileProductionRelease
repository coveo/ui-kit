node('linux && docker') {
  checkout scm

  withDockerContainer(image: 'node:14', args: '-u=root') {
    stage('Graduate') {
      print "GRADUATE SCRIPT VERSION = ${params.VERSION} HASH = ${params.COMMIT_HASH}"
    }

    stage('Npm publish') {
      withCredentials([
      string(credentialsId: 'NPM_TOKEN', variable: 'NPM_TOKEN')]) {
        print "PUBLISH"
      }
    }
  }
}
