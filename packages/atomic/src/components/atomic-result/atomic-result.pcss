@import 'tailwindcss/base';
@import '../../global/global.pcss';

:host {
  @apply font-sans font-normal;
}

.result-root {
  display: grid;
  justify-items: stretch;
}

.result-root > section:empty {
  display: none;
}

/* == Image styles == */
.result-root.image-large,
.result-root.image-small {
  grid-template-areas:
    'visual badges          .               actions'
    'visual title           title           title'
    'visual title-metadata  title-metadata  title-metadata'
    'visual emphasized      emphasized      emphasized'
    'visual excerpt         excerpt         excerpt'
    'visual bottom-metadata bottom-metadata bottom-metadata';
  grid-template-columns: minmax(0, min-content) auto 1fr auto;
  grid-template-rows: auto auto auto auto auto auto;
}

.result-root.image-large section.visual {
  width: 20.375rem;
  height: 20.375rem;
}

.result-root.image-small section.visual {
  width: 10rem;
  height: 10rem;
}

.result-root.image-icon {
  grid-template-areas:
    'badges badges          .               actions'
    'visual title           title           title'
    'visual title-metadata  title-metadata  title-metadata'
    'visual emphasized      emphasized      emphasized'
    'visual excerpt         excerpt         excerpt'
    'visual bottom-metadata bottom-metadata bottom-metadata';
  grid-template-columns: minmax(0, min-content) auto 1fr auto;
  grid-template-rows: auto auto auto auto auto auto;
}

.result-root.image-icon section.visual {
  width: 2rem;
  height: 2rem;
}

.result-root.image-none {
  grid-template-areas:
    'badges          .               actions'
    'title           title           title'
    'title-metadata  title-metadata  title-metadata'
    'emphasized      emphasized      emphasized'
    'excerpt         excerpt         excerpt'
    'bottom-metadata bottom-metadata bottom-metadata';
  grid-template-columns: auto 1fr auto;
  grid-template-rows: auto auto auto auto auto auto;
}

.result-root.image-none section.visual {
  display: none;
}

/* == Density styles == */
/* Comfortable */
.result-root.density-comfortable {
  padding: 2rem 1rem;
}

.result-root.density-comfortable section.visual {
  margin-right: 2rem;
}

.result-root.density-comfortable section.badges {
  margin-bottom: 1.5rem;
  height: 2.5em;
}

.result-root.density-comfortable section.actions {
  margin-bottom: 1.5rem;
  height: 2.5em;
}

.result-root.density-comfortable section.title {
  font-size: 1.5rem;
  line-height: 2rem;
}

.result-root.density-comfortable section.excerpt {
  font-size: 1rem;
  line-height: 1.5rem;
}

.result-root.density-comfortable section.bottom-metadata,
.result-root.density-comfortable section.excerpt {
  margin-top: 1.75rem;
}

/* Normal */
.result-root.density-normal {
  padding: 1.5rem 1rem;
}

.result-root.density-normal section.visual {
  margin-right: 1.5rem;
}

.result-root.density-normal section.badges {
  margin-bottom: 1rem;
  height: 2rem;
}

.result-root.density-normal section.actions {
  margin-bottom: 1rem;
  height: 2rem;
}

.result-root.density-normal section.title {
  font-size: 1.5rem;
  line-height: 2rem;
}

.result-root.density-normal section.excerpt {
  font-size: 0.875rem;
  line-height: 1.25rem;
}

.result-root.density-normal section.bottom-metadata,
.result-root.density-normal section.excerpt {
  margin-top: 1.25rem;
}

/* Compact */
.result-root.density-compact {
  padding: 1rem;
}

.result-root.density-compact section.visual {
  margin-right: 1rem;
}

.result-root.density-compact section.badges {
  margin-bottom: 1rem;
  height: 2rem;
}

.result-root.density-compact section.actions {
  margin-bottom: 1rem;
  height: 2rem;
}

.result-root.density-compact section.title {
  font-size: 1.125rem;
  line-height: 1.5rem;
}

.result-root.density-compact section.excerpt {
  font-size: 0.875rem;
  line-height: 1.25rem;
}

.result-root.density-compact section.bottom-metadata,
.result-root.density-compact section.excerpt {
  margin-top: 1rem;
}

/* Mixed */
.result-root.image-large.density-compact section.visual {
  width: 10.25rem;
  height: 10.25rem;
}

/* == Common styles == */
section.visual {
  grid-area: visual;
}

section.badges {
  grid-area: badges;

  text-align: left;
}

section.actions {
  grid-area: actions;

  text-align: right;
}

section.title {
  grid-area: title;

  color: var(--atomic-on-background);
}

section.title-metadata {
  grid-area: title-metadata;

  font-size: 0.75rem;
}

section.emphasized {
  grid-area: emphasized;

  font-weight: 500;
  font-size: 1.5rem;
  line-height: 2rem;
  margin-top: 0.5rem;
}

section.excerpt {
  grid-area: excerpt;

  color: #626971;
}

section.bottom-metadata {
  grid-area: bottom-metadata;

  font-size: 0.75rem;
  line-height: 1rem;
  color: #626971;
}

section atomic-result-quickview {
  display: inline-block;
}
