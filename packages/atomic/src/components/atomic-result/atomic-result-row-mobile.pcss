@define-mixin row-result-mobile {
  &.image-large.density-compact atomic-result-section-visual {
    width: 10.25rem;
    height: 10.25rem;
  }

  /* == Density styles == */
  &.density-comfortable {
    atomic-result-section-visual {
      margin-right: 1rem;
    }

    atomic-result-section-badges {
      margin-bottom: 1rem;
      height: 2rem;
    }

    atomic-result-section-actions {
      margin-top: 1rem;
      height: 2.5rem;
    }

    atomic-result-section-title {
      @mixin set-font-size var(--atomic-text-xl);
    }

    atomic-result-section-excerpt {
      margin-top: 1.25rem;
      @mixin set-font-size var(--atomic-text-base);

      max-height: 2.5rem;
      @mixin line-clamp 2;
    }

    atomic-result-section-bottom-metadata {
      margin-top: 0.75rem;
      @mixin set-font-size var(--atomic-text-sm);

      max-height: 4rem;
    }

    atomic-result-section-title-metadata {
      margin-top: 0.475rem;
    }
  }

  &.density-normal {
    atomic-result-section-visual {
      margin-right: 1rem;
    }

    atomic-result-section-badges {
      margin-bottom: 1rem;
      height: 2rem;
    }

    atomic-result-section-actions {
      margin-top: 0.75rem;
      height: 2.5rem;
    }

    atomic-result-section-title {
      @mixin set-font-size var(--atomic-text-xl);
    }

    atomic-result-section-excerpt {
      margin-top: 1rem;
      @mixin set-font-size var(--atomic-text-base);

      max-height: 2.5rem;
      @mixin line-clamp 2;
    }

    atomic-result-section-bottom-metadata {
      margin-top: 0.625rem;
      @mixin set-font-size var(--atomic-text-sm);

      max-height: 3.5rem;
    }

    atomic-result-section-title-metadata {
      margin-top: 0.475rem;
    }
  }

  &.density-compact {
    atomic-result-section-visual {
      margin-right: 1rem;
    }

    atomic-result-section-badges {
      margin-bottom: 1rem;
      height: 2rem;
    }

    atomic-result-section-actions {
      margin-top: 0.5em;
      height: 2.5rem;
    }

    atomic-result-section-title {
      @mixin set-font-size var(--atomic-text-xl);
    }

    atomic-result-section-excerpt {
      margin-top: 0.75rem;
      @mixin set-font-size var(--atomic-text-base);

      max-height: 1.25rem;
      @mixin line-clamp 1;
    }

    atomic-result-section-bottom-metadata {
      margin-top: 0.4375rem;
      @mixin set-font-size var(--atomic-text-sm);

      max-height: 3.25rem;
    }

    atomic-result-section-title-metadata {
      margin-top: 0.475rem;
    }
  }

  /* == Image styles == */
  &.image-large {
    grid-template-areas:
      'visual'
      'badges'
      'title'
      'title-metadata'
      'emphasized'
      'excerpt'
      'bottom-metadata'
      'actions';
    grid-template-columns: 100%;
    grid-template-rows: repeat(8, auto);

    atomic-result-section-visual {
      aspect-ratio: 1 / 1;
      width: 100%;
      height: auto;
      margin-right: 0;
      margin-bottom: 1rem;
    }
  }

  &.image-small {
    grid-template-areas:
      'badges          badges'
      'visual          title'
      'visual          title-metadata'
      'visual          emphasized'
      'visual          .'
      'excerpt         excerpt'
      'bottom-metadata bottom-metadata'
      'actions         actions';
    grid-template-columns: auto minmax(0, 1fr);
    grid-template-rows: repeat(4, auto) 1fr repeat(3, auto);

    atomic-result-section-visual {
      width: 24vw;
      height: 24vw;
      margin-bottom: 1rem;
    }
  }

  &.image-icon {
    grid-template-areas:
      'badges          badges'
      'visual          title'
      'visual          title-metadata'
      'visual          emphasized'
      'visual          excerpt'
      'visual          bottom-metadata'
      'visual          actions'
      'visual          .';
    grid-template-columns: auto minmax(0, 1fr);
    grid-template-rows: repeat(7, auto) 1fr;

    atomic-result-section-visual {
      width: 2rem;
      height: 2rem;
      margin-bottom: 0;
    }
  }

  &.image-none {
    grid-template-areas:
      'badges'
      'title'
      'title-metadata'
      'emphasized'
      'excerpt'
      'bottom-metadata'
      'actions';
    grid-template-columns: 100%;
    grid-template-rows: repeat(7, auto);

    atomic-result-section-visual {
      display: none;
    }
  }
}

/* == Common styles == */
atomic-result-section-badges {
  text-align: left;
}

atomic-result-section-actions {
  text-align: left;
}

atomic-result-section-title-metadata {
  @mixin set-font-size var(--atomic-text-sm);
}

atomic-result-section-emphasized {
  font-weight: 500;
  @mixin set-font-size var(--atomic-text-2xl);
  margin-top: 0.5rem;
}
