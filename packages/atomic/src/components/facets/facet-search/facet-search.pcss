.combobox {
  height: var(--atomic-facet-search-height, 30px);
}

.search-results {
  max-height: var(--atomic-facet-search-max-height, 250px);
  overflow-y: scroll;
  top: var(--atomic-facet-search-height, 30px);
  left: 0;
}

.border-divider-t-0 {
  @apply border-solid border-divider border-l border-r border-b border-t-0;
}

.search-result.active, .search-result:hover {
  @apply bg-primary;
}

.search-result.active *, .search-result:hover * {
  @apply text-on-primary;
}
