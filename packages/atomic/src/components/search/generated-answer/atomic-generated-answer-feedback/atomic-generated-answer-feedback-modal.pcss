@import '../../../../global/global.pcss';

[part='reason'] {
  @apply text-base leading-4 text-neutral-dark;

  @screen desktop-only {
    @apply mt-6;
  }

  @screen mobile-only {
    @apply mt-4;
  }
}

.feedbackHeader {
  @apply p-8;
}

[part='form'] {
  @apply text-base leading-4 text-neutral-dark p-2 text-xl;
}

[part='cancel-button'],
[part='submit-button'] {
  @apply flex justify-center text-sm leading-4 p-2;
}
