@import '../../../../global/global.pcss';
@import '../../../../global/mixins.pcss';

.atomic-quickview-modal {
  &::part(backdrop) {
    grid-template-columns: 1fr max(80vw, 30rem) 1fr;
  }
  &::part(body),
  &::part(header),
  &::part(footer) {
    @apply max-w-full;
  }

  &::part(footer) {
    @apply flex justify-center;
  }

  &::part(body-wrapper) {
    @apply p-0 overflow-hidden h-full;
  }

  &::part(body) {
    @apply h-full;
  }

  &::part(backdrop) {
    grid-template-rows: 1fr 100% 3fr;
  }

  &::part(header-wrapper) {
    @apply bg-neutral-light;
  }

  a {
    @mixin link-style;
  }
}
