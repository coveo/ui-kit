@import '../../../global/global.pcss';
@import '../../../global/mixins.pcss';
@import './styles/generated-text.pcss';
@import './styles/feedback-buttons.pcss';
@import './styles/rephrase-buttons.pcss';
@import './styles/typing-indicator.pcss';
@import './styles/source-citations.pcss';
@import './styles/copy-button.pcss';

@keyframes cursor-blink {
  0% {
    opacity: 0;
  }
}

.text-bg-blue {
  color: var(--atomic-primary);
  background: var(--atomic-primary-background);
}

.footer {
  @apply flex;

  .source-citations {
    @apply mr-2;
  }
  .rephrase-buttons {
    @apply ml-auto;
  }

  @screen mobile-only {
    @apply flex-col gap-4;

    .rephrase-buttons {
      @apply ml-0;
    }
  }
}
