@import '../../../global/global.pcss';
@import '../../../global/mixins.pcss';

[part='header-label'] {
  color: var(--atomic-primary);
}

[part='generated-text'] {
  @mixin set-font-size var(--atomic-text-lg);

  color: var(--atomic-on-background);

  &.cursor::after {
    content: '';
    width: 8px;
    height: 1em;
    margin-left: 0.1em;
    background: var(--atomic-neutral-dark);
    display: inline-block;
    animation: cursor-blink 1.5s steps(2) infinite;
    vertical-align: text-bottom;
  }
}

@keyframes cursor-blink {
  0% {
    opacity: 0;
  }
}

@define-mixin icon-coloring $color {
  svg path {
    &.line {
      stroke: $color;
    }
    &.fill {
      fill: $color;
    }
  }
}

.feedback-buttons {
  .feedback-button {
    width: 2.2rem;
    height: 2.2rem;

    @mixin icon-coloring var(--atomic-neutral-dark);

    &.active {
      &.like {
        background: var(--atomic-success-background);
        @mixin icon-coloring var(--atomic-success);
      }

      &.dislike {
        background: var(--atomic-error-background);
        @mixin icon-coloring var(--atomic-error);
      }
    }
  }
}

.text-bg-blue {
  color: var(--atomic-primary);
  background: var(--atomic-primary-background);
}

.source-citations {
  --index-height: 20px;
  --citation-padding: 0.25rem;
  --citation-border-width: 1px;

  .citations-label {
    height: calc(var(--index-height) + (2 * var(--citation-border-width)) + (2 * var(--citation-padding)));
  }

  .citations-container {
    .citation {
      max-width: 160px;
      padding: var(--citation-padding);
      border-width: var(--citation-border-width);
    }

    .citation-index {
      height: var(--index-height);
      width: var(--index-height);
    }
  }
}

.typing-indicator {
  background-color: var(--atomic-primary-background);
  will-change: transform;
  width: auto;
  border-radius: 50px;
  padding: 8px 4px;
  display: table;
  margin: 0 auto;
  position: relative;
  animation: 2s bulge infinite ease-out;
}
.typing-indicator span {
  height: 8px;
  width: 8px;
  float: left;
  margin: 0 4px;
  background-color: #1372ec;
  display: block;
  border-radius: 50%;
  opacity: 0.4;
}
.typing-indicator span:nth-of-type(1) {
  animation: 1s blink infinite 0.3333s;
}
.typing-indicator span:nth-of-type(2) {
  animation: 1s blink infinite 0.6666s;
}
.typing-indicator span:nth-of-type(3) {
  animation: 1s blink infinite 0.9999s;
}
@keyframes blink {
  50% {
    opacity: 1;
  }
}
@keyframes bulge {
  50% {
    transform: scale(1.05);
  }
}
