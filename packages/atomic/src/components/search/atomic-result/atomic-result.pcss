@import '../../../global/global.pcss';
@import '../../../global/mixins.pcss';
@import './atomic-result-with-sections.pcss';
@import './atomic-result-row-desktop.pcss';
@import './atomic-result-row-mobile.pcss';
@import './atomic-result-cell-desktop.pcss';
@import './atomic-result-cell-mobile.pcss';

:host {
  @apply font-sans font-normal;
}

.result-root {
  &.with-sections {
    @mixin result-with-sections;

    &.display-list {
      @screen desktop-only {
        @mixin row-result-desktop;
      }
      @screen mobile-only {
        @mixin row-result-mobile;
      }
    }
    &.display-grid {
      a,
      button {
        position: relative;
      }

      &.image-large {
        @screen desktop-only {
          @mixin cell-result-desktop;
        }
        @screen mobile-only {
          @mixin row-result-mobile;
        }
      }
      &.image-small,
      &.image-icon,
      &.image-none {
        @screen desktop-only {
          @mixin cell-result-desktop;
        }
        @screen mobile-only {
          @mixin cell-result-mobile;
        }
      }
    }
    &.display-table {
      @mixin row-result-desktop;
    }
  }

  atomic-table-element {
    display: none;
  }
}
