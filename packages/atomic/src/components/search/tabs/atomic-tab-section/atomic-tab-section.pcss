@import '../../../../global/global.pcss';

.tabs-container {
  overflow-x: auto;
}

@media (max-width: 768px) {
  .dropdown-area {
    display: block;
    border-bottom-width: 0px;
  }

  .dropdown-area::after {
    content: '';
    display: block;
    width: 100%;
    height: 5px;
    position: relative;
    top: 2.5px;
    background: var(--atomic-primary);
    border-radius: 20px;
  }

  .tabs-area {
    display: none;
  }
  .tabs-container {
    overflow-x: visible;
  }
}
