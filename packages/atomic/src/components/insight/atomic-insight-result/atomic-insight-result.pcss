@import '../../common/result/result.pcss';

atomic-result-section-children {
  margin-top: 0.875rem;
  border-left: 1px solid var(--atomic-neutral);
  padding-left: 1rem;
}

:host(.resultHovered) {
  @apply relative;

  .with-sections {
    background-color: #f2f2f2;
  }
}

:host {
  .with-sections {
    @apply p-6;
  }
}

:host::before {
  @apply my-0 mx-6 !important;
}
