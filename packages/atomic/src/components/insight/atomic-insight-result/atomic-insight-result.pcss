@import '../../common/result/result.pcss';

atomic-result-section-children {
  margin-top: 0.875rem;
  border-left: 1px solid var(--atomic-neutral);
  padding-left: 1rem;
}

:host(.resultHovered) {
  position: relative;

  .with-sections {
    background-color: #f2f2f2;
  }
}

:host(.withActionBar) {
  .with-sections {
    padding: 1.5rem;
  }
}

:host(.withActionBar)::before {
  margin: 0px 1.5rem !important;
}
