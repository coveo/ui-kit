@utility cell-result-desktop {
  grid-template-areas:
    'badges'
    'visual'
    'title'
    'title-metadata'
    'emphasized'
    'excerpt'
    'children'
    'bottom-metadata'
    'actions';
  grid-template-columns: 100%;
  grid-template-rows: repeat(9, auto);

  /* == Density styles == */
  &.density-comfortable {
    &.image-large,
    &.image-small {
      atomic-result-section-visual {
        margin: 0 auto 2rem auto;
      }
    }

    &.image-icon {
      atomic-result-section-badges {
        margin-bottom: 2rem;
      }

      atomic-result-section-visual {
        width: 2rem;
        height: 2rem;
      }
    }

    atomic-result-section-visual {
      margin-bottom: 0.5rem;
    }

    atomic-result-section-badges {
      @apply set-font-size-sm;

      margin-bottom: 1rem;
      --row-height: 2rem;
    }

    atomic-result-section-actions {
      @apply set-font-size-base;

      margin-top: 2.25rem;
      --row-height: 2.5rem;
    }

    atomic-result-section-title {
      @apply set-font-size-2xl;
      word-break: break-word;

      @apply line-clamp-2;
    }

    atomic-result-section-title-metadata
    {
      @apply set-font-size-sm;
      margin-top: 0.475rem;
    }

    atomic-result-section-emphasized {
      font-weight: 500;
      @apply set-font-size-2xl;
    }

    atomic-result-section-excerpt {
      @apply set-font-size-lg;

      margin-top: 2.25rem;
      @apply line-clamp-3;
    }

    atomic-result-section-bottom-metadata {
      @apply set-font-size-sm;

      margin-top: 1.75rem;
      max-height: 4rem;
    }
  }

  &.density-normal {
    &.image-large,
    &.image-small {
      atomic-result-section-visual {
        margin: 0 auto 1.5rem auto;
      }
    }

    &.image-icon {
      atomic-result-section-badges {
        margin-bottom: 1.5rem;
      }

      atomic-result-section-visual {
        width: 2rem;
        height: 2rem;
      }
    }

    atomic-result-section-visual {
      margin-bottom: 0.5rem;
    }

    atomic-result-section-badges {
      @apply set-font-size-sm;

      margin-bottom: 1rem;
      --row-height: 2rem;
    }

    atomic-result-section-actions {
      @apply set-font-size-sm;

      margin-top: 1.75rem;
      --row-height: 2rem;
    }

    atomic-result-section-title {
      @apply set-font-size-xl;
      word-break: break-word;
      @apply line-clamp-2;
    }

    atomic-result-section-title-metadata {
      @apply set-font-size-sm;
      margin-top: 0.475rem;
    }

    atomic-result-section-emphasized {
      font-weight: 500;
      @apply set-font-size-2xl;
    }

    atomic-result-section-excerpt {
      @apply set-font-size-base;

      margin-top: 1.75rem;
      @apply line-clamp-2;
    }

    atomic-result-section-bottom-metadata {
      @apply set-font-size-sm;

      margin-top: 1.375rem;
      max-height: 3.5rem;
    }
  }

  &.density-compact {
    &.image-large,
    &.image-small {
      atomic-result-section-visual {
        margin: 0 auto 1rem auto;
      }
    }

    &.image-icon {
      atomic-result-section-badges {
        margin-bottom: 1rem;
      }

      atomic-result-section-visual {
        width: 2rem;
        height: 2rem;
      }
    }

    atomic-result-section-visual {
      margin-bottom: 0.5rem;
    }

    atomic-result-section-badges {
      @apply set-font-size-sm;

      margin-bottom: 1rem;
      --row-height: 2rem;
    }

    atomic-result-section-actions {
      @apply set-font-size-sm;

      margin-top: 1.25rem;
      --row-height: 2rem;
    }

    atomic-result-section-title {
      @apply set-font-size-xl;
      word-break: break-word;
      @apply line-clamp-2;
    }

    atomic-result-section-title-metadata {
      @apply set-font-size-sm;
      margin-top: 0.475rem;
    }

    atomic-result-section-emphasized {
      font-weight: 500;
      @apply set-font-size-2xl;
    }

    atomic-result-section-excerpt {
      @apply set-font-size-base;

      margin-top: 1.25rem;
      @apply line-clamp-1;
    }

    atomic-result-section-bottom-metadata {
      @apply set-font-size-sm;

      margin-top: 0.9375rem;
      max-height: 3.25rem;
    }
  }

  /* == Image styles == */
  &.image-large {
    atomic-result-section-visual {
      @apply aspect-square-[19.75rem];
      width: 100%;
    }

    atomic-result-section-badges {
      margin-bottom: 1rem;
    }
  }

  &.image-small {
    atomic-result-section-visual {
      @apply aspect-square-[14rem];
      width: 100%;
    }
  }

  &.image-none {
    atomic-result-section-visual {
      display: none;
    }
  }
}
