.expandable-text {
  line-height: var(--line-height);
}

.min-lines-1 {
  min-height: calc(var(--line-height) * 1);
}

.min-lines-2 {
  min-height: calc(var(--line-height) * 2);
}

.min-lines-3 {
  min-height: calc(var(--line-height) * 3);
}

.min-lines-4 {
  min-height: calc(var(--line-height) * 4);
}
