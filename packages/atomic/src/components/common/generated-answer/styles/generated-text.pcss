@reference '../../../../utils/tailwind-utilities/set-font-size.css';
[part='generated-text'] {
  @apply set-font-size-lg;

  &.cursor::after {
    content: '';
    width: 8px;
    height: 1em;
    margin-left: 0.1em;
    @apply bg-neutral-dark;
    display: inline-block;
    animation: cursor-blink 1.5s steps(2) infinite;
    vertical-align: text-bottom;
  }
}
