@import '../../../../global/global.pcss';

.feedback-buttons {
  [part='feedback-button'] {
    width: 2.2rem;
    height: 2.2rem;

    @apply text-neutral-dark;

    &.dislike {
      rotate: 180deg;
    }

    &:hover,
    &.active {
      &.like {
        @apply text-success;
      }

      &.dislike {
        @apply text-error;
      }
    }
  }
}
