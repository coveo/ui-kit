@utility icon-coloring-* {
  atomic-icon {
    color: ----value(--atomic- *]);
  }
}

.feedback-buttons {
  [part='feedback-button'] {
    width: 2.2rem;
    height: 2.2rem;

    @apply icon-coloring-neutral-dark;

    &.dislike {
      rotate: 180deg;
    }

    &:hover,
    &.active {
      &.like {
        @apply icon-coloring-success;
      }

      &.dislike {
        @apply icon-coloring-error;
      }
    }
  }
}
