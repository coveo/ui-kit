@import '../../../global/global.pcss';

.value-count {
  @apply text-neutral-dark ml-1.5;

  [part='value-exclude-button'] + & {
    @apply mr-2;
  }
}

:host(.popover-nested) {
  @apply min-w-[18rem];

  &::part(label-button) {
    @apply hidden;
  }

  &::part(facet) {
    @apply shadow-lg;
  }

  &::part(values) {
    @apply mt-0 max-h-96 overflow-y-auto;
  }

  &::part(search-wrapper) {
    @apply mb-2;
  }
}
