@import '../../../global/global.pcss';

.value-count {
  @apply ml-1.5 text-neutral-dark;

  [part='value-exclude-button'] + & {
    @apply mr-2;
  }
}

:host(.popover-nested) {
  @apply min-w-[18rem];

  &::part(label-button) {
    @apply hidden;
  }

  &::part(facet) {
    @apply shadow-lg;
  }

  &::part(values) {
    @apply max-h-96 overflow-y-auto mt-0;
  }

  &::part(search-wrapper) {
    @apply mb-2;
  }
}
