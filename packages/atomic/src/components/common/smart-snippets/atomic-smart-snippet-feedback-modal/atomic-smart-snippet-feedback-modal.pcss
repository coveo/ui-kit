@import '../../../../global/global.pcss';

[part='reason'] {
  @apply text-base leading-4 text-neutral-dark;

  @screen desktop-only {
    @apply mt-2;
  }

  @screen mobile-only {
    @apply mt-4;
  }
}

[part='cancel-button'],
[part='submit-button'] {
  @apply flex justify-center text-sm leading-4 p-2;
}
