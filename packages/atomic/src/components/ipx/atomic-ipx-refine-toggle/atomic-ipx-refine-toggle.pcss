@import '../../../global/global.pcss';

atomic-icon-button {
  height: 100%;
  &::part(button) {
    height: 100%;
    width: auto;
  }
  &::part(badge) {
    width: 1.25rem;
    height: 1.25rem;
    line-height: 1.25rem;
    font-size: 0.7rem;
  }

  &::part(icon) {
    width: 1.25rem;
    height: 1.25rem;
  }
}
