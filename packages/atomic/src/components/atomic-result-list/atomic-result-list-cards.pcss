@define-mixin atomic-list-with-cards {
  /* TODO: Remove v1 suffix */
  atomic-result-v1,
  atomic-result-placeholder-v1 {
    border: 1px solid var(--atomic-neutral);
    margin: 1rem;
    padding: 1rem;
    border-radius: 1rem;
  }

  atomic-result-placeholder-v1 {
    border-color: transparent;
  }
}
