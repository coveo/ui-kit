@define-mixin atomic-list-with-dividers {
  &.density-comfortable {
    atomic-result,
    atomic-result-placeholder {
      &::before {
        margin: 2rem 0;
      }
    }
  }

  &.density-normal {
    atomic-result,
    atomic-result-placeholder {
      &::before {
        margin: 1.5rem 0;
      }
    }

    @screen mobile-only {
      atomic-result,
      atomic-result-placeholder {
        &::before {
          margin: 1.75rem 0;
        }
      }
    }
  }

  &.density-compact {
    atomic-result,
    atomic-result-placeholder {
      &::before {
        margin: 1rem 0;
      }
    }

    @screen mobile-only {
      atomic-result,
      atomic-result-placeholder {
        &::before {
          margin: 1.5rem 0;
        }
      }
    }
  }

  atomic-result,
  atomic-result-placeholder {
    &::before {
      display: block;
      content: ' ';
      height: 1px;
      background-color: var(--atomic-neutral);
    }

    &:first-of-type::before {
      display: none;
    }
  }

  atomic-result-placeholder {
    &::before {
      background-color: transparent;
    }
  }
}
