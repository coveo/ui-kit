@import '../../../global/global.pcss';
@import '../../../global/mixins.pcss';

:host {
  .result-link {
    @mixin link-style;
  }
  .result-grid {
    grid-template-columns: repeat(4, minmax(0, 1fr));
    justify-items: center;
  }

  @screen desktop-only {
    .result-grid {
      display: grid;
    }
  }

  @screen mobile-only {
    .result-grid {
      display: flex;
      flex-direction: column;
    }
  }
}
