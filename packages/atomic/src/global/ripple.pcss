.ripple {
  position: absolute;
  pointer-events: none;
  transform: scale(0);
  border-radius: 50%;
  animation: ripple var(--animation-duration) linear;
}

.ripple-relative {
  position: relative;
}

.ripple-parent {
  overflow: hidden;
}

@keyframes ripple {
  to {
    transform: scale(4);
    opacity: 0;
  }
}
