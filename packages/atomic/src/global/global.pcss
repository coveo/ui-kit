@import 'tailwindcss/base';
@import 'tailwindcss/components';
@import 'tailwindcss/utilities';
@import './polyfills.pcss';
@import './ripple.pcss';

@layer base {
  :host {
    display: block;
    /* TODO: remove when upgrading Tailwind > v3.0.23 */
    --tw-ring-inset: var(--tw-empty, /*!*/ /*!*/);
  }

  :host,
  button,
  input,
  select {
    @apply font-sans font-normal text-base;
  }

  :host(.atomic-hidden) {
    display: none;
  }
}

@layer components {
  .link {
    @apply text-primary hover:text-primary-light hover:underline focus-visible:text-primary-light focus-visible:underline;
  }

  .input-primary {
    @apply border border-neutral bg-background rounded hover:border-primary-light focus-visible:border-primary no-outline focus-visible:ring-2 focus-visible:ring-ring-primary;
  }

  .btn-radio {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    @apply before:content-[attr(value)];
  }

  .btn-primary {
    @apply rounded bg-primary text-on-primary hover:bg-primary-light focus-visible:bg-primary-light no-outline focus-visible:ring-2 focus-visible:ring-ring-primary disabled:cursor-not-allowed disabled:bg-disabled;
  }

  .btn-outline-primary {
    @apply rounded border border-neutral hover:border-primary-light focus-visible:border-primary bg-background text-primary hover:text-primary-light focus-visible:text-primary focus-visible:ring-2 focus-visible:ring-ring-primary no-outline disabled:border-neutral disabled:text-neutral disabled:cursor-not-allowed;
  }

  .btn-text-primary {
    @apply rounded bg-background text-primary hover:bg-neutral-light focus-visible:bg-neutral-light no-outline;
  }

  .btn-outline-neutral {
    @apply rounded border border-neutral hover:border-primary focus-visible:border-primary bg-background text-on-background hover:text-primary focus-visible:text-primary focus-visible:ring-2 focus-visible:ring-ring-primary no-outline disabled:text-on-background disabled:border-neutral disabled:opacity-50 disabled:cursor-not-allowed;
  }

  .btn-outline-bg-neutral {
    @apply btn-outline-neutral hover:bg-neutral-light focus-visible:bg-neutral-light;
  }

  .btn-text-neutral {
    @apply rounded bg-background hover:bg-neutral-light focus-visible:bg-neutral-light no-outline text-on-background focus-visible:text-primary hover:text-primary;
  }

  .btn-text-transparent {
    @apply with-outline text-on-background focus-visible:text-primary-light hover:text-primary-light;
  }

  .btn-square-neutral {
    @apply border border-neutral bg-background text-on-background hover:bg-neutral-light focus-visible:bg-neutral-light no-outline;
  }

  .btn-pill {
    @apply rounded-xl;
  }

  .btn-page {
    @apply grid place-items-center text-lg border-0 hover:border focus-visible:border;

    &.selected {
      @apply font-bold border-2 border-primary;
    }
  }
}

@layer utilities {
  .empty\:border-none:empty {
    border: none;
  }

  .no-outline {
    @apply focus-visible:outline-none;
  }

  .with-outline {
    @apply focus-visible:outline-color;
  }

  .accessibility-only {
    position: absolute;
    display: block;
    height: 0;
    overflow: hidden;
    margin: 0;
  }

  .text-inherit {
    font-size: inherit;
  }

  .cursor-inherit {
    cursor: inherit;
  }

  .shadow-lg {
    @apply shadow;
    --tw-shadow: 0px 2px 8px rgba(229, 232, 232, 0.75);
  }

  .shadow-t-lg {
    @apply shadow;
    --tw-shadow: 0px -2px 8px rgba(229, 232, 232, 0.75);
  }

  .text-bg-primary {
    color: var(--atomic-primary);
    background: var(--atomic-primary-background);
  }
}
