@import 'tailwindcss/base';
@import 'tailwindcss/components';
@import 'tailwindcss/utilities';
@import './polyfills.pcss';
@import './ripple.pcss';

@layer base {
  :host {
    display: block;
  }

  :host,
  button,
  input,
  select {
    @apply font-sans font-normal text-base;
  }

  :host(.atomic-hidden) {
    display: none;
  }
}

@layer components {
  .link {
    @apply text-primary hover:text-primary-light hover:underline focus-visible:text-primary-light focus-visible:underline;
  }

  .input-primary {
    @apply border border-neutral bg-background rounded hover:border-primary-light focus-visible:border-primary no-outline focus-visible:ring-2 focus-visible:ring-ring-primary;
  }

  .btn-primary {
    @apply rounded bg-primary text-on-primary hover:bg-primary-light no-outline focus-visible:ring-2 focus-visible:ring-ring-primary;
  }

  .btn-outline-primary {
    @apply rounded border border-neutral hover:border-primary-light focus-visible:border-primary bg-background text-primary hover:text-primary-light focus-visible:text-primary no-outline disabled:border-neutral disabled:text-neutral disabled:cursor-not-allowed;
  }

  .btn-text-primary {
    @apply rounded bg-background text-primary hover:bg-neutral-light focus-visible:bg-neutral-light no-outline;
  }

  .btn-outline-neutral {
    @apply rounded border border-neutral hover:border-primary focus-visible:border-primary bg-background text-on-background hover:text-primary focus-visible:text-primary no-outline;
  }

  .btn-outline-bg-neutral {
    @apply btn-outline-neutral hover:bg-neutral-light focus-visible:bg-neutral-light;
  }

  .btn-text-neutral {
    @apply rounded bg-background hover:bg-neutral-light focus-visible:bg-neutral-light no-outline text-on-background focus-visible:text-primary hover:text-primary;
  }

  .btn-text-transparent {
    @apply rounded bg-background with-outline text-on-background focus-visible:text-primary-light hover:text-primary-light;
  }

  .btn-pill {
    @apply rounded-xl;
  }

  .btn-page {
    @apply grid place-items-center text-lg border-0 hover:border focus-visible:border;

    &.selected {
      @apply font-bold border-2 border-primary;
    }
  }
}

@layer utilities {
  .empty\:border-none:empty {
    border: none;
  }

  .with-parentheses::before {
    content: '(';
  }

  .with-parentheses::after {
    content: ')';
  }

  .quotations::before,
  .quotations::after {
    content: '"';
  }

  .no-outline {
    @apply focus-visible:outline-none;
  }

  .with-outline {
    @apply focus-visible:outline-color;
  }
}
