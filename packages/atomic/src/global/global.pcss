@reference './tailwind.default.css';
@import '../utils/tailwind.global.tw.css';

@import './ripple.pcss';

@keyframes scaleUp {
  0% {
    transform: scale(0.7) translateY(150vh);
    opacity: 0.7;
  }
  100% {
    transform: scale(1) translateY(0px);
    opacity: 1;
  }
}

@keyframes slideDown {
  0% {
    transform: translateY(0px);
    opacity: 1;
  }
  100% {
    transform: translateY(150vh);
    opacity: 0.7;
  }
}
