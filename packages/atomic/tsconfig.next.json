{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "bundler",
    "lib": ["dom", "ES2024"],
    "declaration": true,
    "declarationDir": "dist/next/types",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "outDir": "dist/next/esm",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "files": ["src/next.ts"]
}
