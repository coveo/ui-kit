{
  "globals": {
    "window": "readonly"
  },
  "env": {
    "browser": true,
    "es2020": true
  },
  "rules": {
    "curly": ["error"]
  },
  "ignorePatterns": [
    "src/external-builds/**/*",
    "dist/**/*",
    "www/**/*",
    "loader/**/*",
    "docs/**/*",
    "storybook-static"
  ],
  "overrides": [
    {
      "files": "**/*.config.js",
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
