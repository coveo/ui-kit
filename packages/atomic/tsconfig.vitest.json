{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "bundler",
    "lib": ["dom", "DOM.Iterable", "ES2024"],
    "declaration": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["vitest-utils/**/*.ts"]
}
