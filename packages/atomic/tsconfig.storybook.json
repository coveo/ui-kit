{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "composite": true,
    "jsxFactory": "h",
    "declaration": true
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": [
    "storybookUtils/**/*.ts",
    "storybookUtils/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    ".storybook/*.jsx",
    ".storybook/register.tsx",
    ".storybook/main.mts"
  ]
}
