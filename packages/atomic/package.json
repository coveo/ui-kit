{
  "name": "@coveo/atomic",
  "version": "0.1.0-alpha.4",
  "description": "A web-component library for building modern UIs interfacing with the Coveo platform",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/atomic/atomic.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs && npm run build:utils",
    "build:utils": "rollup -c --environment BUILD:production",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "cypress:test": "npx cypress run",
    "cypress:open": "npx cypress open",
    "npm:publish": "npm publish --access public"
  },
  "dependencies": {
    "@coveo/bueno": "^0.1.0-alpha.4",
    "@coveo/headless": "^0.1.0-alpha.4",
    "mustache": "^4.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.2",
    "@stencil/core": "^2.0.3",
    "@types/jest": "^26.0.14",
    "@types/mustache": "^4.0.1",
    "@types/puppeteer": "2.0.1",
    "cross-fetch": "^3.0.4",
    "cypress": "^4.11.0",
    "eslint-plugin-cypress": "^2.11.1",
    "html-loader-jest": "^0.2.1",
    "jest": "^26.4.2",
    "jest-cli": "^26.4.2",
    "rollup": "^2.18.2",
    "rollup-plugin-typescript2": "^0.27.0",
    "puppeteer": "2.1.1",
    "rollup-plugin-html": "^0.2.1"
  },
  "license": "Apache-2.0"
}
