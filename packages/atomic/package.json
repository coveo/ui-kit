{
  "name": "@coveo/atomic",
  "version": "0.42.0",
  "description": "A web-component library for building modern UIs interfacing with the Coveo platform",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/atomic/atomic.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "npm run build:locales && stencil build && npm run build:utils",
    "build:utils": "node --max-old-space-size=4096 ./node_modules/rollup/dist/bin/rollup -c --environment BUILD:production",
    "build:locales": "node --max-old-space-size=4096 ./scripts/split-locales.js",
    "start": "npm run build:locales && stencil build --dev --watch --serve",
    "start:prod": "npx serve www -l 3333",
    "test": "stencil test --spec",
    "test:watch": "stencil test --spec --watchAll",
    "generate": "stencil generate",
    "cypress:test": "npx cypress run --record --key 0e9d8bcc-a33a-4562-8604-c04e7bed0c7e --browser chrome",
    "cypress:test:firefox": "npx cypress run --record --key 0e9d8bcc-a33a-4562-8604-c04e7bed0c7e --browser firefox",
    "cypress:open": "npx cypress open",
    "npm:publish": "npm publish --access public"
  },
  "dependencies": {
    "@coveo/bueno": "^0.31.0",
    "@coveo/headless": "^1.7.0",
    "coveo-styleguide": "^9.26.0",
    "dayjs": "^1.10.4",
    "escape-html": "^1.0.3",
    "i18next": "^20.2.2",
    "i18next-http-backend": "^1.2.2",
    "mustache": "^4.0.1",
    "stencil-inline-svg": "^1.0.1",
    "tailwindcss": "^2.1.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.2",
    "@stencil/core": "^2.5.2",
    "@stencil/postcss": "^2.0.0",
    "@stencil/store": "^1.4.1",
    "@types/escape-html": "^1.0.1",
    "@types/jest": "^26.0.14",
    "@types/mustache": "^4.0.1",
    "@types/postcss-import": "^12.0.0",
    "@types/puppeteer": "^5.4.3",
    "autoprefixer": "^10.2.6",
    "axe-core": "^4.1.1",
    "cross-fetch": "^3.0.6",
    "cypress": "^7.4.0",
    "cypress-axe": "^0.12.0",
    "eslint-plugin-cypress": "^2.11.1",
    "html-loader-jest": "^0.2.1",
    "jest": "^26.4.2",
    "jest-cli": "^26.4.2",
    "postcss-import": "^14.0.2",
    "puppeteer": "^9.1.1",
    "rollup": "^2.18.2",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-typescript2": "^0.30.0"
  },
  "license": "Apache-2.0"
}
