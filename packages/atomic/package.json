{
  "name": "@coveo/atomic",
  "version": "1.95.0",
  "description": "A web-component library for building modern UIs interfacing with the Coveo platform",
  "homepage": "https://docs.coveo.com/en/atomic/latest/",
  "repository": {
    "type": "git",
    "url": "https://github.com/coveo/ui-kit.git",
    "directory": "packages/atomic"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "collection-manifest.json",
  "collection:main": "dist/index.js",
  "unpkg": "dist/atomic/atomic.esm.js",
  "files": [
    "dist/",
    "loader/",
    "docs/",
    "licenses/",
    "headless/",
    "collection-manifest.json"
  ],
  "scripts": {
    "clean": "rimraf -rf dist/* headless/*",
    "build": "npm run build:locales && npm run build:stencil && npm run doc:list-assets && npm run build:storybook && npm run validate:definitions",
    "build:locales": "node ./scripts/create-generated-folder.js && node ./scripts/split-locales.js && node ./scripts/copy-dayjs-locales.js",
    "build:stencil": "npm run copy:headless && node --max_old_space_size=6144 ../../node_modules/@stencil/core/bin/stencil build",
    "copy:headless": "node scripts/copy-headless.js",
    "start": "npm run build:locales && npm run build:stencil -- --dev --watch --serve",
    "start:prod": "npx serve www -l 3333",
    "test": "npm run build:locales && stencil test --spec",
    "test:watch": "stencil test --spec --watchAll",
    "generate": "stencil generate",
    "cypress:test": "cypress run --browser chrome",
    "cypress:test:firefox": "cypress run --browser firefox",
    "cypress:open": "cypress open",
    "cypress-hsp:test": "cypress run --config-file cypress-hsp.json --browser chrome",
    "cypress-hsp:test:firefox": "cypress run --config-file cypress-hsp.json --browser firefox",
    "cypress-hsp:open": "cypress open --config-file cypress-hsp.json",
    "cypress-screenshots:test": "cypress run --config-file cypress-screenshots.json --browser chrome",
    "cypress-screenshots:open": "cypress open --config-file cypress-screenshots.json --browser chrome",
    "cypress-visual:test": "cypress run --config-file cypress-visual-tests.json --browser chrome",
    "cypress-visual:open": "cypress open --config-file cypress-visual-tests.json --browser chrome",
    "npm:publish": "node ../../scripts/deploy/publish.js",
    "npm:publish:alpha": "node ../../scripts/deploy/publish.js alpha",
    "storybook": "npm run storybook:lit-analyze && start-storybook -s ./dist -p 6006",
    "build:storybook": "npm run storybook:lit-analyze && build-storybook && ncp dist/ storybook-static/",
    "storybook:lit-analyze": "lit-analyzer dist/types/components.d.ts src/components/**/*.stories.tsx",
    "doc:list-assets": "node scripts/list-assets.js",
    "validate:definitions": "! tsc --allowSyntheticDefaultImports dist/types/index.d.ts | grep -q 'components.d.ts'"
  },
  "dependencies": {
    "@coveo/bueno": "0.42.1",
    "@coveo/headless": "1.98.0",
    "@salesforce-ux/design-system": "^2.16.1",
    "@stencil/core": "2.15.2",
    "@stencil/store": "1.5.0",
    "coveo-styleguide": "9.34.0",
    "dayjs": "1.11.3",
    "dompurify": "2.3.8",
    "escape-html": "1.0.3",
    "focus-visible": "5.2.0",
    "i18next": "20.6.1",
    "i18next-http-backend": "1.4.1",
    "stencil-inline-svg": "1.1.0",
    "ts-debounce": "^4.0.0"
  },
  "devDependencies": {
    "@applitools/eyes-cypress": "^3.26.1",
    "@babel/core": "7.17.10",
    "@fullhuman/postcss-purgecss": "4.1.3",
    "@monaco-editor/react": "4.3.1",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-replace": "2.4.2",
    "@stencil/angular-output-target": "0.4.0",
    "@stencil/postcss": "2.1.0",
    "@stencil/react-output-target": "0.3.1",
    "@stencil/store": "1.5.0",
    "@storybook/addon-a11y": "6.3.12",
    "@storybook/addon-controls": "6.3.12",
    "@storybook/addon-docs": "6.3.12",
    "@storybook/addon-essentials": "6.3.12",
    "@storybook/addon-viewport": "6.3.12",
    "@storybook/api": "6.3.12",
    "@storybook/builder-webpack5": "^6.3.12",
    "@storybook/html": "6.3.12",
    "@storybook/manager-webpack5": "^6.3.12",
    "@tailwindcss/line-clamp": "0.3.1",
    "@types/dompurify": "2.3.3",
    "@types/escape-html": "1.0.2",
    "@types/lodash": "4.14.182",
    "@types/postcss-import": "14.0.0",
    "@types/puppeteer": "5.4.6",
    "autoprefixer": "10.4.7",
    "axe-core": "4.4.2",
    "cross-fetch": "3.1.5",
    "cypress": "9.5.2",
    "cypress-axe": "0.14.0",
    "html-loader-jest": "0.2.1",
    "jest-cli": "27.5.1",
    "jest-localstorage-mock": "2.4.21",
    "lit-analyzer": "1.2.1",
    "lit-html": "2.2.3",
    "lodash": "4.17.21",
    "monaco-editor-webpack-plugin": "6.0.0",
    "ncp": "2.0.0",
    "postcss-focus-visible": "6.0.4",
    "postcss-import": "14.1.0",
    "postcss-mixins": "9.0.2",
    "postcss-nested": "5.0.6",
    "puppeteer": "9.1.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "rollup-plugin-html": "0.2.1",
    "tailwindcss": "3.0.23"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.9.0"
  }
}
