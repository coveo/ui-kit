{
  "name": "@coveo/atomic",
  "version": "1.16.2",
  "description": "A web-component library for building modern UIs interfacing with the Coveo platform",
  "homepage": "https://docs.coveo.com/en/atomic/latest/",
  "repository": {
    "type": "git",
    "url": "https://github.com/coveo/ui-kit.git",
    "directory": "packages/atomic"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/atomic/atomic.esm.js",
  "files": [
    "dist/",
    "loader/",
    "docs/",
    "licenses/",
    "headless/"
  ],
  "scripts": {
    "clean": "rimraf -f -r dist/* headless/*",
    "build": "npm run build:locales && npm run build:stencil && npm run doc:list-assets && npm run build:storybook",
    "build:locales": "node --max-old-space-size=4096 ./scripts/split-locales.js",
    "build:stencil": "npm run copy:headless && node --max_old_space_size=6144 ./node_modules/@stencil/core/bin/stencil build",
    "copy:headless": "node scripts/copy-headless.js",
    "start": "npm run build:locales && npm run build:stencil -- --dev --watch --serve",
    "start:prod": "npx serve www -l 3333",
    "test": "stencil test --spec",
    "test:watch": "stencil test --spec --watchAll",
    "generate": "stencil generate",
    "cypress:test": "./node_modules/cypress/bin/cypress run --record --key 0e9d8bcc-a33a-4562-8604-c04e7bed0c7e --browser chrome",
    "cypress:test:firefox": "./node_modules/cypress/bin/cypress --record --key 0e9d8bcc-a33a-4562-8604-c04e7bed0c7e --browser firefox",
    "cypress:open": "./node_modules/cypress/bin/cypress open",
    "npm:publish": "node ../../scripts/deploy/publish.js",
    "npm:publish:alpha": "node ../../scripts/deploy/publish.js alpha",
    "storybook": "npm run storybook:lit-analyze && start-storybook -s ./dist -p 6006",
    "build:storybook": "npm run storybook:lit-analyze && build-storybook && ncp dist/ storybook-static/",
    "storybook:lit-analyze": "lit-analyzer dist/types/components.d.ts src/components/**/*.stories.tsx",
    "doc:list-assets": "node scripts/list-assets.js"
  },
  "dependencies": {
    "@coveo/bueno": "^0.33.2",
    "@coveo/headless": "^1.35.2",
    "@salesforce-ux/design-system": "^2.16.1",
    "coveo-styleguide": "^9.26.0",
    "dayjs": "^1.10.4",
    "dompurify": "^2.3.0",
    "escape-html": "^1.0.3",
    "focus-visible": "^5.2.0",
    "i18next": "^20.2.2",
    "i18next-http-backend": "^1.2.2",
    "stencil-inline-svg": "^1.0.1",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@fullhuman/postcss-purgecss": "4.0.3",
    "@monaco-editor/react": "4.3.1",
    "@rollup/plugin-alias": "3.1.8",
    "@rollup/plugin-replace": "2.4.2",
    "@stencil/core": "2.10.0",
    "@stencil/postcss": "2.1.0",
    "@stencil/store": "1.5.0",
    "@storybook/addon-a11y": "6.3.12",
    "@storybook/addon-controls": "6.3.12",
    "@storybook/addon-docs": "6.3.12",
    "@storybook/addon-essentials": "6.3.12",
    "@storybook/addon-viewport": "6.3.12",
    "@storybook/api": "6.3.12",
    "@storybook/html": "6.3.12",
    "@types/dompurify": "2.3.1",
    "@types/escape-html": "1.0.1",
    "@types/jest": "26.0.24",
    "@types/lodash": "4.14.176",
    "@types/postcss-import": "12.0.1",
    "@types/puppeteer": "5.4.4",
    "autoprefixer": "10.4.0",
    "axe-core": "4.3.5",
    "babel-loader": "8.2.3",
    "cross-fetch": "3.1.4",
    "cypress": "8.7.0",
    "cypress-axe": "0.13.0",
    "eslint-plugin-cypress": "2.12.1",
    "html-loader-jest": "0.2.1",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lit-analyzer": "1.2.1",
    "lit-html": "2.0.1",
    "lodash": "4.17.21",
    "monaco-editor-webpack-plugin": "6.0.0",
    "ncp": "2.0.0",
    "postcss-focus-visible": "6.0.1",
    "postcss-import": "14.0.2",
    "postcss-mixins": "8.1.0",
    "postcss-nested": "5.0.6",
    "puppeteer": "9.1.1",
    "react": "16.14.0",
    "rollup-plugin-html": "0.2.1",
    "jest-localstorage-mock": "^2.4.18"
  },
  "license": "Apache-2.0"
}
