import {withTailwindStyles} from '@/src/decorators/with-tailwind-styles.js';
import {type CSSResultGroup, html} from 'lit';
import {customElement, property} from 'lit/decorators.js';
import styles from './{{name}}.tw.css';

/**
* The `{{name}}` component displays a simple greeting message.
*/
@customElement('{{name}}')
@withTailwindStyles
export class {{namePascalCase}} extends LitElement {
  static styles: CSSResultGroup = styles;

  /**
   * The name of the entity to greet.
   */
  @property() name = 'World';

  render() {
    return html`<div>
      <h1>{{name}}</h1>
      <p>Hello ${this.name}</p>
    </div>`;
  }
}

declare global {
  interface HTMLElementTagNameMap {
    '{{name}}': {{namePascalCase}};
  }
}
