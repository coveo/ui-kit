{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "extends": "//",
  "files": {
    "includes": [
      "**",
      "!cypress/**/*",
      "!**/*.tsx",
      "**/*.stories.tsx",
      "!**/*.d.ts"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
