{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": [
        "build:storybook",
        "build:angular",
        "build:react",
        "build:stencil-lit",
        "build:locales",
        "build:list-assets"
      ],
      "outputs": []
    },
    "build:storybook": {
      "dependsOn": ["build:cem", "build:list-assets"],
      "outputs": ["./dist-storybook"]
    },
    "build:angular": {
      "dependsOn": ["build:cem"],
      "outputs": ["./projects/atomic-angular/**/*"]
    },
    "build:react": {
      "dependsOn": ["build:cem"],
      "outputs": ["./projects/atomic-react/**/*"]
    },
    "build:cem": {
      "dependsOn": ["build:stencil-lit"],
      "outputs": ["./custom-elements.json"]
    },
    "build:stencil-lit": {
      "dependsOn": ["^build", "build:locales"],
      "outputs": [
        "./dist",
        "./cdn",
        "./docs",
        "./src/components.d.ts",
        "./.stencil",
        "./src/lit-components.d.ts"
      ]
    },
    "build:locales": {
      "dependsOn": ["^build"],
      "outputs": [
        "./src/generated/**",
        "./src/components/search/atomic-search-interface/lang/**"
      ],
      "inputs": ["./src/locales.json"]
    },
    "build:list-assets": {
      "dependsOn": ["build:stencil-lit"],
      "outputs": ["./dist/atomic/assets/**", "./docs/assets.json"]
    },
    "test:stencil": {
      "dependsOn": ["build:locales"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "test/**", "stencil.config.ts"]
    },
    "test:lit": {
      "dependsOn": ["^build", "build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "test/**", "vitest.config.*"]
    }
  }
}
