{
  "name": "@coveo/create-atomic-rollup-plugin",
  "version": "1.0.0",
  "description": "Rollup plugin for resolving Coveo Atomic dependencies from CDN or npm",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "scripts": {
    "build": "nx build",
    "build:ts": "tsc -p tsconfig.json",
    "lint": "npx @biomejs/biome check .",
    "publish:npm": "npm run-script -w=@coveo/ci npm-publish",
    "publish:bump": "npm run-script -w=@coveo/ci bump",
    "promote:npm:latest": "npm run-script -w=@coveo/ci promote-npm-prod"
  },
  "keywords": [
    "coveo",
    "atomic",
    "rollup",
    "plugin",
    "bundler"
  ],
  "author": "Coveo",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coveo/ui-kit.git",
    "directory": "packages/create-atomic-rollup-plugin"
  },
  "devDependencies": {
    "typescript": "5.8.3"
  }
}
