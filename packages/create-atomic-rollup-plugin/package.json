{
  "name": "@coveo/create-atomic-rollup-plugin",
  "version": "1.2.1",
  "description": "Rollup plugin for resolving Coveo Atomic dependencies from CDN or npm",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "node ../../utils/ci/rm-rf.mjs dist",
    "build": "pnpm run clean && pnpm run build:ts",
    "build:ts": "tsc -p tsconfig.json",
    "lint": "npx @biomejs/biome check .",
    "release:phase3": "pnpm --filter @coveo/ci npm-publish",
    "release:phase1": "pnpm --filter @coveo/ci bump",
    "promote:npm:latest": "pnpm --filter @coveo/ci promote-npm-prod"
  },
  "keywords": [
    "coveo",
    "atomic",
    "rollup",
    "plugin",
    "bundler"
  ],
  "author": "Coveo",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coveo/ui-kit.git",
    "directory": "packages/create-atomic-rollup-plugin"
  },
  "devDependencies": {
    "@types/node": "22.10.2",
    "typescript": "5.8.3"
  }
}
