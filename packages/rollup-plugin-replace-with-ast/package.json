{
  "name": "@coveo/rollup-plugin-replace-with-ast",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coveo/ui-kit.git",
    "directory": "packages/rollup-plugin-replace-with-ast"
  },
  "private": true,
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "exports": {
    "types": "./types/index.d.ts",
    "import": "./dist/es/index.js",
    "default": "./dist/cjs/index.js"
  },
  "engines": {
    "node": "^20.9.0"
  },
  "types": "./dist/definitions/index.d.ts",
  "license": "Apache-2.0",
  "version": "1.0.0",
  "files": [
    "dist/",
    "types/"
  ],
  "scripts": {
    "dev": "concurrently \"npm run build:definitions -- -w\" \"npm run build:bundles -- dev\"",
    "build": "nx build",
    "build:bundles": "rollup -c",
    "build:definitions": "tsc -d --emitDeclarationOnly --declarationDir dist/definitions",
    "clean": "rimraf -rf dist/*",
    "test": "jest",
    "test:watch": "jest --watch --colors --no-cache"
  },
  "peerDependencies": {
    "rollup": "^1.20.0||^2.0.0||^3.0.0||^4.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    }
  },
  "dependencies": {
    "slash": "^4.0.0"
  },
  "devDependencies": {
    "@rollup/pluginutils": "^5.1.0",
    "acorn": "^8.12.1",
    "del-cli": "^5.0.0",
    "magic-string": "^0.30.11",
    "rollup": "^4.0.0-24",
    "typescript": "^4.8.3"
  },
  "ava": {
    "files": [
      "!**/fixtures/**",
      "!**/output/**",
      "!**/helpers/**",
      "!**/recipes/**",
      "!**/types.ts"
    ]
  }
