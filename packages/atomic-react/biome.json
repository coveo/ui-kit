{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "extends": "//",
  "files": {
    "includes": ["**", "!**/stencil-generated/**/*"]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "nursery": {"noFloatingPromises": "warn"}
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
