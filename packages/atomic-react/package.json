{
  "name": "@coveo/atomic-react",
  "sideEffects": false,
  "version": "1.21.5",
  "description": "React specific wrapper for the Atomic component library",
  "repository": {
    "type": "git",
    "url": "https://github.com/coveo/ui-kit.git",
    "directory": "packages/atomic-react"
  },
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copy:assets",
    "link:packages": "npm link ../atomic ../samples/atomic-react/node_modules/react/",
    "clean": "rimraf -rf dist",
    "compile:esm": "tsc -p tsconfig.esm.json",
    "compile:cjs": "tsc -p tsconfig.cjs.json",
    "compile": "concurrently \"npm run compile:esm\" \"npm run compile:cjs\"",
    "npm:publish:alpha": "node ../../scripts/deploy/publish.js alpha",
    "copy:assets": "ncp ../atomic/dist/atomic/assets dist/assets && ncp ../atomic/dist/atomic/lang dist/lang "
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@coveo/atomic": "1.99.2"
  },
  "devDependencies": {
    "@types/node": "15.14.9",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "ncp": "2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  }
}
