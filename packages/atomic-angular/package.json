{
  "name": "@coveo/atomic-angular-builder",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "dev": "ng serve",
    "gen:lit": "node ./scripts/build-lit.mjs",
    "build": "pnpm run build:bundles && pnpm run build:assets",
    "build:bundles": "ng build",
    "build:assets": "node ../../utils/ci/copy-files.mjs ../atomic/dist/atomic/assets projects/atomic-angular/dist/assets ../atomic/dist/atomic/lang projects/atomic-angular/dist/lang",
    "release:phase3": "node ./scripts/publish-npm.mjs",
    "release:phase1": "node ./scripts/bump.mjs"
  },
  "private": true,
  "dependencies": {
    "@coveo/atomic": "workspace:*",
    "rxjs": "7.8.2"
  },
  "peerDependencies": {
    "@coveo/headless": "workspace:*"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.2.19",
    "@angular/cli": "19.2.19",
    "@angular/compiler-cli": "19.2.17",
    "@types/node": "catalog:",
    "@coveo/headless": "workspace:*",
    "ng-packagr": "19.2.2",
    "typescript": "catalog:",
    "tslib": "2.8.1",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": "^20.9.0 || ^22.11.0"
  }
}
