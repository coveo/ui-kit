{
  "name": "@coveo/atomic-angular-builder",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "dev": "ng serve",
    "gen:lit": "node ./scripts/build-lit.mjs",
    "build": "pnpm run build:bundles && pnpm run build:assets",
    "build:bundles": "ng build",
    "build:assets": "ncp ../atomic/dist/atomic/assets projects/atomic-angular/dist/assets && ncp ../atomic/dist/atomic/lang projects/atomic-angular/dist/lang",
    "publish:npm": "node ./scripts/publish-npm.mjs",
    "publish:bump": "node ./scripts/bump.mjs"
  },
  "private": true,
  "dependencies": {
    "@coveo/atomic": "workspace:*",
    "rxjs": "7.8.2"
  },
  "peerDependencies": {
    "@coveo/headless": "workspace:*"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.2.3",
    "@angular/cli": "19.2.3",
    "@angular/compiler-cli": "19.2.2",
    "@types/node": "22.16.4",
    "@coveo/headless": "workspace:*",
    "ng-packagr": "19.2.0",
    "typescript": "5.8.3",
    "ncp": "2.0.0",
    "tslib": "2.8.1"
  },
  "engines": {
    "node": "^20.9.0 || ^22.11.0"
  }
}
