{
  "name": "atomic-next",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "@coveo/atomic": "^1.104.1",
    "@coveo/atomic-react": "^1.23.2",
    "next": "12.3.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "17.0.34",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "cypress": "^10.8.0",
    "ncp": "2.0.0",
    "typescript": "4.9.3"
  },
  "scripts": {
    "build": "tsc --noEmit && tsc --module commonjs --noEmit",
    "dev": "npm run copy:assets && next dev",
    "copy:assets": "ncp ../../atomic-react/dist/assets public/assets && ncp ../../atomic-react/dist/lang public/lang public/assets",
    "cypress:open": "cypress open",
    "cypress:test": "cypress run --browser chrome"
  }
}
