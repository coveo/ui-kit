{
  "name": "@coveo/atomic-next-samples",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@coveo/atomic": "3.32.3",
    "@coveo/atomic-react": "3.3.3",
    "@coveo/headless": "3.28.3",
    "next": "15.2.4",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@types/node": "22.16.5",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.2",
    "cypress": "13.7.3",
    "ncp": "2.0.0",
    "typescript": "5.8.3"
  },
  "scripts": {
    "build": "npm run build:next && npm run build:ts-esm && npm run build:ts-cjs",
    "build:next": "npm run-script -w=@coveo/ci if-not-cdn -- \"npx next build\"",
    "build:ts-esm": "npm run-script -w=@coveo/ci if-not-cdn -- \"tsc --noEmit\"",
    "build:ts-cjs": "npm run-script -w=@coveo/ci if-not-cdn -- \"tsc --module commonjs --noEmit\"",
    "dev": "npm run build:assets && npm run dev:nextjs",
    "dev:nextjs": "next dev",
    "build:assets": "ncp ../../atomic-react/dist/assets public/assets && ncp ../../atomic-react/dist/lang public/lang public/assets",
    "e2e:watch": "cypress open --browser chrome --e2e",
    "e2e": "cypress run --browser chrome"
  }
}
