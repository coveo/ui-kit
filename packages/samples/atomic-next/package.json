{
  "name": "atomic-next",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "@coveo/atomic": "^1.69.0",
    "@coveo/atomic-react": "^1.12.5",
    "next": "12.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "17.0.45",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "ncp": "2.0.0",
    "typescript": "4.6.4"
  },
  "scripts": {
    "build": "tsc --noEmit && tsc --module commonjs --noEmit",
    "dev": "npm run link:react && npm run copy:assets && next dev",
    "link:react": "cd ../../atomic-react && npm link ../samples/atomic-react/node_modules/react/",
    "copy:assets": "ncp ../../atomic-react/dist/assets public/assets && ncp ../../atomic-react/dist/lang public/lang public/assets"
  }
}
