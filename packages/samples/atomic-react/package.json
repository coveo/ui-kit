{
  "name": "atomic-react",
  "version": "0.0.0",
  "description": "Samples with atomic-react",
  "private": true,
  "dependencies": {
    "@coveo/atomic": "^1.62.0",
    "@coveo/atomic-react": "^1.8.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "css-loader": "6.7.1",
    "cypress": "9.3.1",
    "eslint-plugin-react": "7.29.4",
    "ncp": "2.0.0",
    "style-loader": "3.3.1",
    "ts-loader": "9.2.8",
    "typescript": "4.6.3",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.8.1"
  },
  "scripts": {
    "build": "tsc --noEmit && tsc --module commonjs --noEmit",
    "dev": "npm run copy:assets && npm run link:atomic-react && webpack serve",
    "copy:assets": "ncp node_modules/@coveo/atomic-react/dist/assets public/assets && ncp node_modules/@coveo/atomic-react/dist/lang public/lang public/assets && ncp node_modules/@coveo/atomic/dist/atomic/themes public/themes",
    "link:atomic-react": "cd ../../atomic-react && npm link ../samples/atomic-react/node_modules/react/ && ncp ../atomic/dist ../atomic-react/node_modules/@coveo/atomic/dist",
    "cypress:open": "cypress open"
  }
}
