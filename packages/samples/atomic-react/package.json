{
  "name": "atomic-react",
  "version": "0.0.0",
  "description": "Samples with atomic-react",
  "private": true,
  "dependencies": {
    "@coveo/atomic": "^1.40.0",
    "@coveo/atomic-react": "^1.0.2",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.4",
    "css-loader": "6.7.1",
    "cypress": "9.6.1",
    "eslint-plugin-react": "7.30.0",
    "ncp": "2.0.0",
    "style-loader": "3.3.1",
    "ts-loader": "9.3.0",
    "typescript": "4.6.4",
    "webpack": "5.72.1",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.9.0"
  },
  "scripts": {
    "build": "tsc --noEmit",
    "dev": "npm run copy:assets && npm run link:atomic-react && webpack serve",
    "copy:assets": "ncp node_modules/@coveo/atomic-react/dist/assets public/assets && ncp node_modules/@coveo/atomic-react/dist/lang public/lang public/assets && ncp node_modules/@coveo/atomic/dist/atomic/themes public/themes",
    "link:atomic-react": "cd ../../atomic-react && npm link ../samples/atomic-react/node_modules/react/",
    "cypress:open": "cypress open"
  }
}
