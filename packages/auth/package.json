  "devDependencies": {
    "@types/jest": "^27.0.3",
    "esbuild": "^0.13.15",
    "jest": "^27.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7"
  },
  "engines": {
    "node": ">=10"
