{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "declaration": false,
    "lib": ["DOM", "ES2019", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node", "jest"]
  },
  "exclude": [
    "./temp/**",
    "./dist/**",
    "./docs/**",
    "./ponyfills/**",
    "./src/external-builds/**"
  ]
}
