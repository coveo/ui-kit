{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "declaration": false,
    "lib": ["DOM", "ES2023"],
    "module": "Node16",
    "target": "ESNext",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node", "vitest/globals"]
  },
  "exclude": [
    "./temp/**",
    "./dist/**",
    "./docs/**",
    "./ponyfills/**",
    "./src/external-builds/**",
    "node_modules"
  ]
}
