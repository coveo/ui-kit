{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "declaration": false,
    "lib": ["DOM", "ES2019", "ES2022"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node", "jest"]
  },
  "exclude": ["./temp/**", "./dist/**", "./docs/**", "./ponyfills/**"]
}
