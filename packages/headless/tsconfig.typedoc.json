{
  "extends": "../../tsconfig.json",
  "include": [
    "./src/app/*.ts",
    "./src/controllers/**/*.ts",
    "./src/features/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ],
  "typedocOptions": {
    "json": "./dist/doc.json",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true,
    "ignoreCompilerErrors": true
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "preserve"
  }
}