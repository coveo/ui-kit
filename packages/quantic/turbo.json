{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": [
        "build:staticresources",
        "build:doc",
        "babel:headless"
      ],
      "outputs":[]
    },
    "build:staticresources": {
      "dependsOn": ["^build", "babel:headless"],
      "outputs": [
        "force-app/main/default/staticresources/coveobueno/**",
        "force-app/main/default/staticresources/coveoheadless/**",
        "force-app/main/default/staticresources/dompurify/**",
        "force-app/main/default/staticresources/marked/**",
        "force-app/solutionExamples/main/staticresources/coveoua/**"
      ]
    },
    "build:doc": {
      "dependsOn": ["^build"],
      "outputs": ["docs/out/**"]
    },
    "babel:headless": {
      "dependsOn": ["^build"],
      "outputs": [
        ".tmp/quantic-compiled/**"
      ]
    },
    "promote:sfdx": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "promote:sfdx:ci": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test": {
      "outputs": [],
      "dependsOn": ["test:unit", "lint:check:tests", "validate:types"]
    },
    "test:unit": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "validate:types": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "lint:check:tests": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}