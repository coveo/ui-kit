{
  "name": "@coveo/quantic",
  "version": "2.19.0",
  "description": "A Salesforce Lightning Web Component (LWC) library for building modern UIs interfacing with the Coveo platform",
  "author": "coveo.com",
  "homepage": "https://coveo.com",
  "license": "Apache-2.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coveo/ui-kit"
  },
  "scripts": {
    "test": "npm run build:staticresources && npm run lint:check:tests && npm run validate:types && npm run test:unit",
    "lint:check:tests": "eslint force-app/main/default/lwc/ --format junit -o reports/eslint.xml",
    "lint:fix": "eslint force-app/main/default/lwc/ --fix && eslint force-app/examples/main/lwc/ --fix",
    "fix": "npm run lint:fix",
    "build:staticresources": "node copy-static-resources.js",
    "build": "npm run build:staticresources && npm run build:doc",
    "dev": "npx rimraf .localdevserver && npm run build:staticresources && npm run dev:sfdx",
    "dev:sfdx": "sfdx force:source:deploy -p force-app/main && sfdx force:lightning:lwc:start --port 3334",
    "test:unit": "../../node_modules/.bin/lwc-jest",
    "test:unit:debug": "lwc-jest --debug",
    "test:unit:watch": "lwc-jest --watch",
    "test:unit:coverage": "lwc-jest --coverage",
    "validate:types": "tsc",
    "e2e:watch": "npx cypress open",
    "e2e": "npx cypress run --browser chrome",
    "e2e:detailed": "npx cypress run --browser chrome --headless --reporter cypress/reporters/detailed-reporter.js",
    "setup:examples": "../../node_modules/.bin/ts-node scripts/build/deploy-community.ts",
    "deploy:main": "../../node_modules/.bin/sfdx force:source:deploy -u LWC -p force-app/main",
    "deploy:examples": "../../node_modules/.bin/sfdx force:source:deploy -u LWC -p force-app/examples",
    "prebuild:doc": "mkdirp docs/out",
    "build:doc": "jsdoc -c jsdoc-config.json",
    "publish:sfdx": "../../node_modules/.bin/ts-node scripts/build/create-package.ts --remove-translations",
    "promote:sfdx": "npm run publish:sfdx -- --promote",
    "publish:npm:release": "node ../../scripts/deploy/publish.mjs release",
    "publish:npm:prerelease": "node ../../scripts/deploy/publish.mjs prerelease",
    "promote:npm:beta": "node ../../scripts/deploy/update-npm-tag.mjs beta",
    "promote:npm:latest": "node ../../scripts/deploy/update-npm-tag.mjs latest",
    "preinstall": "node scripts/npm/check-sfdx-project.js",
    "postinstall": "node scripts/npm/setup-quantic.js"
  },
  "dependencies": {
    "@coveo/bueno": "0.43.1",
    "@coveo/headless": "2.11.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@ckeditor/jsdoc-plugins": "25.4.5",
    "@octokit/graphql": "5.0.4",
    "@octokit/graphql-schema": "10.74.2",
    "@salesforce/eslint-config-lwc": "3.3.3",
    "@salesforce/sfdx-lwc-jest": "1.1.2",
    "@types/strip-color": "0.1.0",
    "@types/wait-on": "5.3.1",
    "chalk": "4.1.2",
    "change-case": "4.1.2",
    "cypress": "10.8.0",
    "cypress-plugin-tab": "1.0.5",
    "dotenv": "10.0.0",
    "fs-extra": "10.1.0",
    "jest-junit": "12.3.0",
    "jsdoc": "4.0.0",
    "jsdoc-tsimport-plugin": "1.0.5",
    "mkdirp": "^2.1.3",
    "ncp": "2.0.0",
    "sfdx-cli": "7.178.0",
    "strip-color": "0.1.0",
    "ts-node": "10.9.1",
    "wait-on": "6.0.1",
    "xml2json": "0.12.0"
  },
  "files": [
    "force-app/main/default/classes/*",
    "force-app/main/default/labels/*",
    "force-app/main/default/lwc/*",
    "force-app/main/default/cspTrustedSites/*",
    "force-app/main/default/staticresources/*",
    "scripts/npm"
  ]
}
