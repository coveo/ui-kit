{
    "compilerOptions": {
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "noEmit": true,
        "checkJs": true,
        "allowJs": true,
        "baseUrl": "force-app/main/default/lwc",
        "target": "es2016",
        "module": "ESNext",
        "lib": ["es2016", "dom"],
        "paths": {
            "c/quanticDateFacet": [
                "quanticDateFacet/quanticDateFacet.js"
            ],
            "c/quanticDateFacetValue": [
                "quanticDateFacetValue/quanticDateFacetValue.js"
            ],
            "c/quanticCategoryFacet": [
                "quanticCategoryFacet/quanticCategoryFacet.js"
            ],
            "c/quanticCategoryFacetValue": [
                "quanticCategoryFacetValue/quanticCategoryFacetValue.js"
            ],
            "c/quanticFacet": [
                "quanticFacet/quanticFacet.js"
            ],
            "c/quanticPager": [
                "quanticPager/quanticPager.js"
            ],
            "c/quanticResult": [
                "quanticResult/quanticResult.js"
            ],
            "c/quanticResultList": [
                "quanticResultList/quanticResultList.js"
            ],
            "c/quanticSort": [
                "quanticSort/quanticSort.js"
            ],
            "c/quanticSummary": [
                "quanticSummary/quanticSummary.js"
            ],
            "c/quanticFacetValue": [
                "quanticFacetValue/quanticFacetValue.js"
            ],
            "c/quanticNumericFacet": [
                "quanticNumericFacet/quanticNumericFacet.js"
            ],
            "c/quanticNumericFacetValue": [
                "quanticNumericFacetValue/quanticNumericFacetValue.js"
            ],
            "c/quanticResultsPerPage": [
                "quanticResultsPerPage/quanticResultsPerPage.js"
            ],
            "c/quanticSearchBox": [
                "quanticSearchBox/quanticSearchBox.js"
            ],
            "c/quanticSearchBoxSuggestionsList": [
                "quanticSearchBoxSuggestionsList/quanticSearchBoxSuggestionsList.js"
            ],
            "c/quanticSearchInterface": [
                "quanticSearchInterface/quanticSearchInterface.js"
            ],
            "c/quanticNumberButton": [
                "quanticNumberButton/quanticNumberButton.js"
            ],
            "c/quanticHeadlessLoader": [
                "quanticHeadlessLoader/quanticHeadlessLoader.js"
            ],
            "c/quanticUtils": [
                "quanticUtils/quanticUtils.js"
            ],
        }
    },
    "include": [
        "force-app/main/default/lwc",
        "typings/lwc/**/*.d.ts",
        "coveo.d.ts",
    ],
    "exclude": [
        "**/__tests__/**"
    ],
    "typeAcquisition": {
        "include": [
            "jest"
        ]
    },
    "paths": {
        "c/*": [
            "*"
        ]
    }
}
