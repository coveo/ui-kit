{
  "name": "quantic",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "release:phase1": {},
    "release:phase3": {},
    "build": {
      "executor": "nx:noop",
      "dependsOn": ["build:headless", "build:doc"]
    },
    "promote:sfdx": {
      "dependsOn": ["build"],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-script",
      "options": {
        "script": "promote:sfdx"
      }
    },
    "promote:sfdx:ci": {
      "dependsOn": ["build"],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-script",
      "options": {
        "script": "promote:sfdx:ci"
      }
    },
    "build:doc": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/docs/out/quantic-docs.json"],
      "cache": true,
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["jsdoc -c jsdoc-config.json"],
        "env": {
          "DEBUG": ""
        }
      }
    },
    "build:headless": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/force-app/main/default/staticresources/coveobueno",
        "{projectRoot}/force-app/main/default/staticresources/coveoheadless",
        "{projectRoot}/force-app/main/default/staticresources/dompurify",
        "{projectRoot}/force-app/main/default/staticresources/marked"
      ],
      "dependsOn": ["^build"],
      "cache": true,
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["npm run babel:headless && npm run build:staticresources"]
      },
      "env": {
        "DEBUG": ""
      }
    }
  }
}
