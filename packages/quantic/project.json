{
  "namedInputs": {
    "negativeBuildOutputs": [
      "!{projectRoot}/docs/out",
      "!{projectRoot}/force-app/main/default/staticresources"
    ],
    "negativeNonBuildOutputs": ["!{projectRoot}/reports"]
  },
  "targets": {
    "cached:build": {
      "outputs": [
        "{projectRoot}/docs/out",
        "{projectRoot}/force-app/main/default/staticresources"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npm run build:staticresources", "npm run build:doc"],
        "parallel": true,
        "cwd": "packages/quantic"
      }
    },
    "build": {
      "dependsOn": ["cached:build"],
      "executor": "nx:noop"
    },
    "promote:sfdx": {
      "dependsOn": ["build"],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-script",
      "options": {
        "script": "promote:sfdx"
      }
    },
    "promote:sfdx:ci": {
      "dependsOn": ["build"],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-script",
      "options": {
        "script": "promote:sfdx:ci"
      }
    }
  }
}
