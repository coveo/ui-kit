{
  "name": "quantic",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "release:phase1": {},
    "release:phase3": {},
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/docs/out",
        "{projectRoot}/force-app/main/default/staticresources/coveobueno",
        "{projectRoot}/force-app/main/default/staticresources/coveoheadless",
        "{projectRoot}/force-app/main/default/staticresources/dompurify",
        "{projectRoot}/force-app/main/default/staticresources/marked"
      ],
      "cache": true,
      "options": {
        "commands": [
          "npm run babel:headless && npm run build:staticresources",
          "npm run build:doc"
        ],
        "parallel": true,
        "cwd": "{projectRoot}"
      }
    },
    "promote:sfdx": {
      "dependsOn": ["build"],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-script",
      "options": {
        "script": "promote:sfdx"
      }
    },
    "promote:sfdx:ci": {
      "dependsOn": ["build"],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-script",
      "options": {
        "script": "promote:sfdx:ci"
      }
    },
    "lint:check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npm run lint:check:tests"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npm run lint:fix"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/coverage"],
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "npm run lint:check:tests",
          "npm run validate:types",
          "npm run test:unit"
        ],
        "parallel": true,
        "cwd": "{projectRoot}"
      }
    }
  }
}
