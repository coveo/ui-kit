{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "jsxFragmentFactory": "JSX.Fragment",
    "module": "Node16",
    "moduleResolution": "Node16",
    "noImplicitThis": false,
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "web_modules", "**/*.spec.ts"]
}
