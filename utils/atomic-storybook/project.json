{
  "name": "atomic-storybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["atomic"],
  "namedInputs": {
    "negativeBuildOutputs": ["!{projectRoot}/storybook-static"]
  },
  "targets": {
    "install:isolated": {
      "dependsOn": [],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../scripts/bin/install-isolated.mjs",
        "cwd": "utils/atomic-storybook"
      }
    },
    "validate:storybook": {
      "dependsOn": ["^build"],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-commands",
      "options": {
        "command": "exit 0",
        "cwd": "utils/atomic-storybook"
      }
    },
    "build:storybook:assets-list": {
      "dependsOn": ["^build"],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/list-assets.mjs",
        "cwd": "packages/atomic"
      }
    },
    "prepare-and-validate": {
      "dependsOn": [
        "^build",
        "validate:storybook",
        "build:storybook:assets-list"
      ],
      "executor": "nx:noop"
    },
    "cached:build": {
      "dependsOn": ["prepare-and-validate"],
      "outputs": ["{projectRoot}/storybook-static"],
      "executor": "nx:run-commands",
      "options": {
        "command": "npx storybook build",
        "cwd": "utils/atomic-storybook"
      }
    },
    "build": {
      "dependsOn": ["cached:build"],
      "executor": "nx:noop"
    },
    "dev": {
      "dependsOn": ["prepare-and-validate"],
      "inputs": [],
      "outputs": [],
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run dev",
        "cwd": "utils/atomic-storybook"
      }
    }
  }
}
